<UserControl x:Class="VapourSynthPortable.Pages.MediaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VapourSynthPortable.ViewModels"
             xmlns:controls="clr-namespace:VapourSynthPortable.Controls"
             xmlns:local="clr-namespace:VapourSynthPortable.Pages"
             d:DataContext="{d:DesignInstance Type=vm:MediaViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             KeyDown="MediaPage_KeyDown"
             Focusable="True">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- String to bool converter for clear button visibility -->
        <local:StringToBoolConverter x:Key="StringToBoolConverter"/>

        <!-- Media Item Grid Template -->
        <DataTemplate x:Key="GridItemTemplate">
            <Border x:Name="GridItemBorder" CornerRadius="4" Margin="4" Width="160" Cursor="Hand"
                    BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToBorderBrush}}"
                    BorderThickness="2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#383838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add to Bin" ItemsSource="{Binding DataContext.CustomBins, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <MenuItem.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </MenuItem.ItemTemplate>
                            <MenuItem.ItemContainerStyle>
                                <Style TargetType="MenuItem">
                                    <Setter Property="Command" Value="{Binding DataContext.AddItemToBinCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Setter Property="CommandParameter" Value="{Binding}"/>
                                </Style>
                            </MenuItem.ItemContainerStyle>
                            <MenuItem.Icon>
                                <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Reveal in Explorer"
                                  Command="{Binding DataContext.RevealInExplorerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  CommandParameter="{Binding}">
                            <MenuItem.Icon>
                                <TextBlock Text="&#xE8DA;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Remove from Pool"
                                  Command="{Binding DataContext.RemoveFromPoolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  CommandParameter="{Binding}">
                            <MenuItem.Icon>
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#C75050"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Thumbnail -->
                    <Border Grid.Row="0" Background="#1A1A1A" CornerRadius="4,4,0,0">
                        <Grid>
                            <!-- Loading indicator (animated pulse) -->
                            <Border Visibility="{Binding IsLoadingThumbnail, Converter={StaticResource BoolToVis}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center">
                                    <Border Width="32" Height="32" CornerRadius="16" Background="#333">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                         From="0.3" To="1.0" Duration="0:0:0.6"
                                                                         AutoReverse="True"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                   Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Loading..." Foreground="#555" FontSize="9" Margin="0,4,0,0"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- Error state -->
                            <Border Visibility="{Binding ThumbnailLoadFailed, Converter={StaticResource BoolToVis}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel HorizontalAlignment="Center">
                                    <Border Width="32" Height="32" CornerRadius="16" Background="#4A2525">
                                        <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="16"
                                                   Foreground="#C75050" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{Binding ThumbnailErrorMessage}" Foreground="#AAA" FontSize="9" Margin="0,4,0,0"
                                               HorizontalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="140"/>
                                </StackPanel>
                            </Border>

                            <!-- Thumbnail image (shown when loaded and no error) -->
                            <Image Source="{Binding Thumbnail}" Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Visibility="{Binding IsLoadingThumbnail, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                            <!-- Duration badge for video -->
                            <Border Background="#000000AA" CornerRadius="2" Padding="4,2"
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="4"
                                    Visibility="{Binding DurationFormatted, Converter={StaticResource StringToVis}}">
                                <TextBlock Text="{Binding DurationFormatted}" Foreground="White" FontSize="10"/>
                            </Border>

                            <!-- Media type icon -->
                            <Border Background="#0078D4" CornerRadius="2" Padding="4,2"
                                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4">
                                <TextBlock Text="{Binding MediaType}" Foreground="White" FontSize="9"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Info -->
                    <StackPanel Grid.Row="1" Margin="8,6">
                        <TextBlock Text="{Binding Name}" Foreground="#EEE" FontSize="11"
                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding Name}"/>
                        <TextBlock Foreground="#AAA" FontSize="9" Margin="0,2,0,0">
                            <Run Text="{Binding Resolution, Mode=OneWay}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding FileSizeFormatted, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Media Item List Template -->
        <DataTemplate x:Key="ListItemTemplate">
            <Border CornerRadius="4" Margin="2" Padding="8">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#2D2D2D"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#383838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add to Bin" ItemsSource="{Binding DataContext.CustomBins, RelativeSource={RelativeSource AncestorType=UserControl}}">
                            <MenuItem.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </MenuItem.ItemTemplate>
                            <MenuItem.ItemContainerStyle>
                                <Style TargetType="MenuItem">
                                    <Setter Property="Command" Value="{Binding DataContext.AddItemToBinCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    <Setter Property="CommandParameter" Value="{Binding}"/>
                                </Style>
                            </MenuItem.ItemContainerStyle>
                            <MenuItem.Icon>
                                <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Reveal in Explorer"
                                  Command="{Binding DataContext.RevealInExplorerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  CommandParameter="{Binding}">
                            <MenuItem.Icon>
                                <TextBlock Text="&#xE8DA;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Remove from Pool"
                                  Command="{Binding DataContext.RemoveFromPoolCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  CommandParameter="{Binding}">
                            <MenuItem.Icon>
                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#C75050"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </Border.ContextMenu>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <!-- Thumbnail with loading/error states -->
                    <Border Grid.Column="0" Width="70" Height="40" Background="#1A1A1A" CornerRadius="2">
                        <Grid>
                            <!-- Loading indicator -->
                            <Border Visibility="{Binding IsLoadingThumbnail, Converter={StaticResource BoolToVis}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border Width="20" Height="20" CornerRadius="10" Background="#333">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                     From="0.3" To="1.0" Duration="0:0:0.6"
                                                                     AutoReverse="True"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <TextBlock Text="&#xE895;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                               Foreground="#888" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Border>

                            <!-- Error state -->
                            <Border Visibility="{Binding ThumbnailLoadFailed, Converter={StaticResource BoolToVis}}"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Border Width="20" Height="20" CornerRadius="10" Background="#4A2525">
                                    <TextBlock Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                               Foreground="#C75050" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Border>

                            <!-- Thumbnail image -->
                            <Image Source="{Binding Thumbnail}" Stretch="Uniform"
                                   Visibility="{Binding IsLoadingThumbnail, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <!-- Name -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock Text="{Binding Name}" Foreground="#EEE" FontSize="12"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Codec}" Foreground="#888" FontSize="10"/>
                    </StackPanel>

                    <!-- Resolution -->
                    <TextBlock Grid.Column="2" Text="{Binding Resolution}" Foreground="#AAA"
                               VerticalAlignment="Center" FontSize="11"/>

                    <!-- Duration -->
                    <TextBlock Grid.Column="3" Text="{Binding DurationFormatted}" Foreground="#AAA"
                               VerticalAlignment="Center" FontSize="11"/>

                    <!-- Size -->
                    <TextBlock Grid.Column="4" Text="{Binding FileSizeFormatted}" Foreground="#AAA"
                               VerticalAlignment="Center" FontSize="11"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- String to Visibility converter for duration badge -->
        <Style x:Key="StringToVisStyle" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding DurationFormatted}" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Import Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Import Media" Style="{StaticResource PrimaryButton}"
                            Command="{Binding ImportMediaCommand}" Margin="0,0,8,0"/>
                    <Button Content="Import Folder" Style="{StaticResource SecondaryButton}"
                            Command="{Binding ImportFolderCommand}" Margin="0,0,8,0"/>
                    <Rectangle Width="1" Fill="#444" Margin="8,2"/>
                    <Button Content="New Bin" Style="{StaticResource SecondaryButton}"
                            Command="{Binding CreateBinCommand}" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Search Box -->
                <Border x:Name="SearchBorder" Grid.Column="1" Background="#1E1E1E" CornerRadius="4" Margin="20,0" MaxWidth="300"
                        BorderThickness="1" BorderBrush="Transparent">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=SearchBox}" Value="True">
                                    <Setter Property="BorderBrush" Value="#0078D4"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search icon -->
                        <TextBlock Grid.Column="0" Text="&#xE721;" FontFamily="Segoe MDL2 Assets"
                                   Foreground="#666" FontSize="14" VerticalAlignment="Center" Margin="10,0,0,0"/>

                        <TextBox x:Name="SearchBox" Grid.Column="1" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="#CCC" Padding="8,8" VerticalAlignment="Center"/>

                        <!-- Placeholder text -->
                        <TextBlock Grid.Column="1" Text="Search name, codec, resolution..." Foreground="#555" Margin="8,0"
                                   VerticalAlignment="Center" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- Clear button -->
                        <Button Grid.Column="2" x:Name="ClearSearchButton" Click="ClearSearchButton_Click"
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                Padding="8,4" VerticalAlignment="Center" ToolTip="Clear search (Esc)">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText, Converter={StaticResource StringToBoolConverter}}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="10"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- View Mode Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <RadioButton Content="Grid" GroupName="ViewMode" IsChecked="True"
                                 Command="{Binding SetViewModeCommand}" CommandParameter="Grid"
                                 Foreground="#AAA" Margin="0,0,10,0"/>
                    <RadioButton Content="List" GroupName="ViewMode"
                                 Command="{Binding SetViewModeCommand}" CommandParameter="List"
                                 Foreground="#AAA"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="PreviewColumn">
                    <ColumnDefinition.Style>
                        <Style TargetType="ColumnDefinition">
                            <Setter Property="Width" Value="280"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsPreviewPanelExpanded}" Value="False">
                                    <Setter Property="Width" Value="Auto"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!-- Bins Panel -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Media Bins" FontSize="14" FontWeight="SemiBold"
                               Foreground="#F1F1F1" Margin="15,15,15,10"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Bins}"
                             SelectedItem="{Binding SelectedBin}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,4" AllowDrop="True"
                                      DragOver="BinItem_DragOver" Drop="BinItem_Drop">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Context menu for custom bins -->
                                    <Grid.ContextMenu>
                                        <ContextMenu Visibility="{Binding IsCustomBin, Converter={StaticResource BoolToVis}}">
                                            <MenuItem Header="Rename" Command="{Binding DataContext.StartEditBinCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <TextBlock Text="&#xE8AC;" FontFamily="Segoe MDL2 Assets" FontSize="12"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                            <Separator/>
                                            <MenuItem Header="Delete" Command="{Binding DataContext.DeleteBinCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                      CommandParameter="{Binding}">
                                                <MenuItem.Icon>
                                                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="12" Foreground="#C75050"/>
                                                </MenuItem.Icon>
                                            </MenuItem>
                                        </ContextMenu>
                                    </Grid.ContextMenu>

                                    <TextBlock Grid.Column="0" Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets"
                                               Foreground="#AAA" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                    <!-- Normal display mode -->
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="#CCC"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding IsEditing, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                                    <!-- Edit mode (inline rename) -->
                                    <TextBox Grid.Column="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#1E1E1E" Foreground="#EEE" BorderThickness="1" BorderBrush="#555"
                                             Padding="4,2" VerticalAlignment="Center"
                                             Visibility="{Binding IsEditing, Converter={StaticResource BoolToVis}}"
                                             x:Name="BinNameTextBox"
                                             KeyDown="BinNameTextBox_KeyDown"
                                             LostFocus="BinNameTextBox_LostFocus"/>

                                    <TextBlock Grid.Column="2" Text="{Binding TotalItemCount}" Foreground="#888"
                                               VerticalAlignment="Center" FontSize="11"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#3C3C3C"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Media Grid/List -->
            <Border Grid.Column="1" Background="#252526" CornerRadius="8" Margin="5,0">
                <Grid>
                    <!-- Empty state -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding DisplayedItems.Count, Converter={StaticResource CountToVis}}">
                        <!-- Icon -->
                        <Border Width="64" Height="64" CornerRadius="32" Background="#2D2D2D" Margin="0,0,0,16">
                            <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="28"
                                       Foreground="#555" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="{Binding EmptyStateTitle}" FontSize="16" Foreground="#AAA"
                                   HorizontalAlignment="Center" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding EmptyStateSubtitle}" FontSize="12"
                                   Foreground="#555" HorizontalAlignment="Center" Margin="0,8,0,16"
                                   TextWrapping="Wrap" MaxWidth="300" TextAlignment="Center"/>
                        <!-- Import button in empty state (only when no media) -->
                        <Button Content="Import Media" Style="{StaticResource PrimaryButton}"
                                Command="{Binding ImportMediaCommand}"
                                Visibility="{Binding HasNoMedia, Converter={StaticResource BoolToVis}}"
                                Padding="16,8"/>
                    </StackPanel>

                    <!-- Loading indicator with progress -->
                    <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                            Background="#2D2D2D" CornerRadius="8" Padding="24,16"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                        <StackPanel Width="200">
                            <TextBlock Text="{Binding ImportProgressText}" FontSize="13" Foreground="#CCC"
                                       HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <ProgressBar Value="{Binding ImportProgress}" Minimum="0" Maximum="100"
                                         Height="6" Background="#1A1A1A" Foreground="#0078D4"/>
                        </StackPanel>
                    </Border>

                    <!-- Grid View -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10"
                                  Visibility="{Binding CurrentViewMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Grid}">
                        <ListBox x:Name="MediaListBox" ItemsSource="{Binding DisplayedItems}"
                                 SelectedItem="{Binding SelectedItem}"
                                 SelectionMode="Extended"
                                 ItemTemplate="{StaticResource GridItemTemplate}"
                                 Background="Transparent" BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 MouseDoubleClick="MediaListBox_MouseDoubleClick"
                                 SelectionChanged="MediaListBox_SelectionChanged"
                                 PreviewMouseLeftButtonDown="MediaListBox_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="MediaListBox_PreviewMouseMove">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>

                    <!-- List View with Sortable Headers -->
                    <Grid Visibility="{Binding CurrentViewMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=List}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Column Headers -->
                        <Border Grid.Row="0" Background="#2D2D2D" Padding="8,6" CornerRadius="4,4,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="" Foreground="#AAA" FontSize="11"/>

                                <Button Grid.Column="1" Command="{Binding SortByColumnCommand}" CommandParameter="Name"
                                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Name" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="10" Margin="6,0,0,0"
                                                   Text="{Binding SortDirection, Converter={StaticResource SortDirectionToArrowConverter}}"
                                                   Visibility="{Binding SortColumn, Converter={StaticResource StringToVisibilityMatchConverter}, ConverterParameter=Name}"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="2" Command="{Binding SortByColumnCommand}" CommandParameter="Resolution"
                                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Resolution" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="10" Margin="6,0,0,0"
                                                   Text="{Binding SortDirection, Converter={StaticResource SortDirectionToArrowConverter}}"
                                                   Visibility="{Binding SortColumn, Converter={StaticResource StringToVisibilityMatchConverter}, ConverterParameter=Resolution}"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="3" Command="{Binding SortByColumnCommand}" CommandParameter="Duration"
                                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Duration" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="10" Margin="6,0,0,0"
                                                   Text="{Binding SortDirection, Converter={StaticResource SortDirectionToArrowConverter}}"
                                                   Visibility="{Binding SortColumn, Converter={StaticResource StringToVisibilityMatchConverter}, ConverterParameter=Duration}"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="4" Command="{Binding SortByColumnCommand}" CommandParameter="Size"
                                        Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Size" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Foreground="#888" FontSize="10" Margin="6,0,0,0"
                                                   Text="{Binding SortDirection, Converter={StaticResource SortDirectionToArrowConverter}}"
                                                   Visibility="{Binding SortColumn, Converter={StaticResource StringToVisibilityMatchConverter}, ConverterParameter=Size}"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- List Content -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ListBox x:Name="MediaListView" ItemsSource="{Binding DisplayedItems}"
                                     SelectedItem="{Binding SelectedItem}"
                                     SelectionMode="Extended"
                                     ItemTemplate="{StaticResource ListItemTemplate}"
                                     Background="Transparent" BorderThickness="0"
                                     MouseDoubleClick="MediaListBox_MouseDoubleClick"
                                     SelectionChanged="MediaListBox_SelectionChanged"
                                     PreviewMouseLeftButtonDown="MediaListBox_PreviewMouseLeftButtonDown"
                                     PreviewMouseMove="MediaListBox_PreviewMouseMove">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListBoxItem">
                                                    <Border x:Name="ItemBorder" Background="Transparent" Padding="4,2">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="#3C3C3C"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ItemBorder" Property="Background" Value="#333"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <!-- Preview & Properties Panel -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition>
                        <RowDefinition.Style>
                            <Style TargetType="RowDefinition">
                                <Setter Property="Height" Value="*"/>
                                <Setter Property="MinHeight" Value="200"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPreviewPanelExpanded}" Value="False">
                                        <Setter Property="Height" Value="0"/>
                                        <Setter Property="MinHeight" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition>
                        <RowDefinition.Style>
                            <Style TargetType="RowDefinition">
                                <Setter Property="Height" Value="200"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPreviewPanelExpanded}" Value="False">
                                        <Setter Property="Height" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </RowDefinition.Style>
                    </RowDefinition>
                </Grid.RowDefinitions>

                <!-- Collapse Toggle Header -->
                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <ToggleButton x:Name="PreviewToggle"
                                  IsChecked="{Binding IsPreviewPanelExpanded}"
                                  Background="Transparent" BorderThickness="0"
                                  HorizontalAlignment="Stretch" Cursor="Hand"
                                  ToolTip="Toggle preview panel (P)">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border Background="#252526" CornerRadius="4" Padding="8,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="Preview" FontSize="12" FontWeight="SemiBold"
                                                   Foreground="#F1F1F1" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" FontFamily="Segoe MDL2 Assets" FontSize="10"
                                                   Foreground="#888" VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="&#xE76C;"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="False">
                                                            <Setter Property="Text" Value="&#xE76B;"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </Grid>

                <!-- Video Player Preview -->
                <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="8"
                        Visibility="{Binding IsPreviewPanelExpanded, Converter={StaticResource BoolToVis}}">
                    <Grid>
                        <!-- Video Player Control -->
                        <controls:VideoPlayerControl x:Name="VideoPlayer"/>

                        <!-- Thumbnail fallback for non-video or when player unavailable -->
                        <Border x:Name="ThumbnailPreview" Background="#1A1A1A" Visibility="Collapsed">
                            <Grid>
                                <Image Source="{Binding SelectedItem.Thumbnail}" Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="Select an item to preview" Foreground="#555" FontSize="12"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="{Binding SelectedItem, Converter={StaticResource NullToVis}}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Play Selected Button -->
                <Border Grid.Row="2" Padding="0,8"
                        Visibility="{Binding IsPreviewPanelExpanded, Converter={StaticResource BoolToVis}}">
                    <Button x:Name="PlaySelectedButton" Content="Play Selected"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Click="PlaySelectedButton_Click"
                            IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToBool}}"/>
                </Border>

                <!-- Properties Panel -->
                <Border Grid.Row="3" Background="#252526" CornerRadius="8"
                        Visibility="{Binding IsPreviewPanelExpanded, Converter={StaticResource BoolToVis}}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15,10">
                        <StackPanel DataContext="{Binding SelectedItem}">
                            <!-- File name -->
                            <TextBlock Text="{Binding Name}" Foreground="#EEE" FontSize="12"
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <!-- Properties -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Type" Foreground="#AAA" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MediaType}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Resolution" Foreground="#AAA" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Resolution}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Duration" Foreground="#AAA" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DurationFormatted}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Codec" Foreground="#AAA" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Codec}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="File Size" Foreground="#AAA" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding FileSizeFormatted}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Path" Foreground="#AAA" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding FilePath}" Foreground="#777" FontSize="9"
                                           TextTrimming="CharacterEllipsis" ToolTip="{Binding FilePath}" Margin="0,3"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1E1E1E" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusText}" Foreground="#AAA"/>

                <!-- Selection count badge -->
                <Border Grid.Column="1" Background="#0078D4" CornerRadius="3" Padding="8,3" Margin="0,0,20,0"
                        Visibility="{Binding SelectionStatusText, Converter={StaticResource StringToVis}}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE762;" FontFamily="Segoe MDL2 Assets" FontSize="11"
                                   Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{Binding SelectionStatusText}" Foreground="White"
                                   FontSize="11" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Foreground="#888" Margin="0,0,15,0">
                        <Run Text="{Binding VideoCount, Mode=OneWay}"/> <Run Text="videos"/>
                    </TextBlock>
                    <TextBlock Foreground="#888" Margin="0,0,15,0">
                        <Run Text="{Binding AudioCount, Mode=OneWay}"/> <Run Text="audio"/>
                    </TextBlock>
                    <TextBlock Foreground="#888">
                        <Run Text="{Binding ImageCount, Mode=OneWay}"/> <Run Text="images"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
