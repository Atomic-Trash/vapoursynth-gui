<UserControl x:Class="VapourSynthPortable.Pages.MediaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VapourSynthPortable.ViewModels"
             xmlns:controls="clr-namespace:VapourSynthPortable.Controls">

    <UserControl.DataContext>
        <vm:MediaViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Media Item Grid Template -->
        <DataTemplate x:Key="GridItemTemplate">
            <Border Background="#2D2D2D" CornerRadius="4" Margin="4" Width="160" Cursor="Hand"
                    BorderBrush="{Binding IsSelected, Converter={StaticResource BoolToBorderBrush}}"
                    BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Thumbnail -->
                    <Border Grid.Row="0" Background="#1A1A1A" CornerRadius="4,4,0,0">
                        <Grid>
                            <!-- Loading indicator -->
                            <TextBlock Text="Loading..." Foreground="#555" FontSize="10"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Visibility="{Binding IsLoadingThumbnail, Converter={StaticResource BoolToVis}}"/>

                            <!-- Thumbnail image -->
                            <Image Source="{Binding Thumbnail}" Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="HighQuality"/>

                            <!-- Duration badge for video -->
                            <Border Background="#000000AA" CornerRadius="2" Padding="4,2"
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="4"
                                    Visibility="{Binding DurationFormatted, Converter={StaticResource StringToVis}}">
                                <TextBlock Text="{Binding DurationFormatted}" Foreground="White" FontSize="10"/>
                            </Border>

                            <!-- Media type icon -->
                            <Border Background="#0078D4" CornerRadius="2" Padding="4,2"
                                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4">
                                <TextBlock Text="{Binding MediaType}" Foreground="White" FontSize="9"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Info -->
                    <StackPanel Grid.Row="1" Margin="8,6">
                        <TextBlock Text="{Binding Name}" Foreground="#EEE" FontSize="11"
                                   TextTrimming="CharacterEllipsis" ToolTip="{Binding Name}"/>
                        <TextBlock Foreground="#888" FontSize="9" Margin="0,2,0,0">
                            <Run Text="{Binding Resolution, Mode=OneWay}"/>
                            <Run Text=" "/>
                            <Run Text="{Binding FileSizeFormatted, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- Media Item List Template -->
        <DataTemplate x:Key="ListItemTemplate">
            <Border Background="#2D2D2D" CornerRadius="4" Margin="2" Padding="8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <!-- Thumbnail -->
                    <Border Grid.Column="0" Width="70" Height="40" Background="#1A1A1A" CornerRadius="2">
                        <Image Source="{Binding Thumbnail}" Stretch="Uniform"/>
                    </Border>

                    <!-- Name -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock Text="{Binding Name}" Foreground="#EEE" FontSize="12"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding Codec}" Foreground="#666" FontSize="10"/>
                    </StackPanel>

                    <!-- Resolution -->
                    <TextBlock Grid.Column="2" Text="{Binding Resolution}" Foreground="#AAA"
                               VerticalAlignment="Center" FontSize="11"/>

                    <!-- Duration -->
                    <TextBlock Grid.Column="3" Text="{Binding DurationFormatted}" Foreground="#AAA"
                               VerticalAlignment="Center" FontSize="11"/>

                    <!-- Size -->
                    <TextBlock Grid.Column="4" Text="{Binding FileSizeFormatted}" Foreground="#888"
                               VerticalAlignment="Center" FontSize="11"/>
                </Grid>
            </Border>
        </DataTemplate>

        <!-- String to Visibility converter for duration badge -->
        <Style x:Key="StringToVisStyle" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding DurationFormatted}" Value="">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="15,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Import Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Import Media" Style="{StaticResource PrimaryButton}"
                            Command="{Binding ImportMediaCommand}" Margin="0,0,8,0"/>
                    <Button Content="Import Folder" Style="{StaticResource SecondaryButton}"
                            Command="{Binding ImportFolderCommand}" Margin="0,0,8,0"/>
                    <Rectangle Width="1" Fill="#444" Margin="8,2"/>
                    <Button Content="New Bin" Style="{StaticResource SecondaryButton}"
                            Command="{Binding CreateBinCommand}" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Search Box -->
                <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="4" Margin="20,0" MaxWidth="300">
                    <Grid>
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="#CCC" Padding="10,8" VerticalAlignment="Center"/>
                        <TextBlock Text="Search media..." Foreground="#555" Margin="12,0"
                                   VerticalAlignment="Center" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <!-- View Mode Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <RadioButton Content="Grid" GroupName="ViewMode" IsChecked="True"
                                 Command="{Binding SetViewModeCommand}" CommandParameter="Grid"
                                 Foreground="#AAA" Margin="0,0,10,0"/>
                    <RadioButton Content="List" GroupName="ViewMode"
                                 Command="{Binding SetViewModeCommand}" CommandParameter="List"
                                 Foreground="#AAA"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Bins Panel -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="8" Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Media Bins" FontSize="14" FontWeight="SemiBold"
                               Foreground="#F1F1F1" Margin="15,15,15,10"/>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Bins}"
                             SelectedItem="{Binding SelectedBin}"
                             Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="5,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets"
                                               Foreground="#888" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="#CCC"
                                               VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="{Binding TotalItemCount}" Foreground="#666"
                                               VerticalAlignment="Center" FontSize="11"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="10,6"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#3C3C3C"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#333"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Media Grid/List -->
            <Border Grid.Column="1" Background="#252526" CornerRadius="8" Margin="5,0">
                <Grid>
                    <!-- Empty state -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding DisplayedItems.Count, Converter={StaticResource CountToVis}}">
                        <TextBlock Text="No media imported" FontSize="18" Foreground="#555"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Click 'Import Media' or drag files here" FontSize="12"
                                   Foreground="#444" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    </StackPanel>

                    <!-- Loading indicator -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Importing media..." FontSize="14" Foreground="#888"/>
                    </StackPanel>

                    <!-- Grid View -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                        <ListBox x:Name="MediaListBox" ItemsSource="{Binding DisplayedItems}"
                                 SelectedItem="{Binding SelectedItem}"
                                 ItemTemplate="{StaticResource GridItemTemplate}"
                                 Background="Transparent" BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 MouseDoubleClick="MediaListBox_MouseDoubleClick">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Preview & Properties Panel -->
            <Grid Grid.Column="2" Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" MinHeight="200"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="200"/>
                </Grid.RowDefinitions>

                <!-- Video Player Preview -->
                <Border Grid.Row="0" Background="#1A1A1A" CornerRadius="8">
                    <Grid>
                        <!-- Video Player Control -->
                        <controls:VideoPlayerControl x:Name="VideoPlayer"/>

                        <!-- Thumbnail fallback for non-video or when player unavailable -->
                        <Border x:Name="ThumbnailPreview" Background="#1A1A1A" Visibility="Collapsed">
                            <Grid>
                                <Image Source="{Binding SelectedItem.Thumbnail}" Stretch="Uniform"
                                       RenderOptions.BitmapScalingMode="HighQuality"/>
                                <TextBlock Text="Select an item to preview" Foreground="#555" FontSize="12"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="{Binding SelectedItem, Converter={StaticResource NullToVis}}"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Play Selected Button -->
                <Border Grid.Row="1" Padding="0,8">
                    <Button x:Name="PlaySelectedButton" Content="Play Selected"
                            Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Click="PlaySelectedButton_Click"
                            IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToBool}}"/>
                </Border>

                <!-- Properties Panel -->
                <Border Grid.Row="2" Background="#252526" CornerRadius="8">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15,10">
                        <StackPanel DataContext="{Binding SelectedItem}">
                            <!-- File name -->
                            <TextBlock Text="{Binding Name}" Foreground="#EEE" FontSize="12"
                                       TextWrapping="Wrap" Margin="0,0,0,10"/>

                            <!-- Properties -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="75"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Type" Foreground="#888" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MediaType}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Resolution" Foreground="#888" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Resolution}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Duration" Foreground="#888" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DurationFormatted}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Codec" Foreground="#888" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Codec}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="File Size" Foreground="#888" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding FileSizeFormatted}" Foreground="#CCC" FontSize="10" Margin="0,3"/>

                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Path" Foreground="#888" FontSize="10" Margin="0,3"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding FilePath}" Foreground="#777" FontSize="9"
                                           TextTrimming="CharacterEllipsis" ToolTip="{Binding FilePath}" Margin="0,3"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1E1E1E" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusText}" Foreground="#888"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Foreground="#666" Margin="0,0,15,0">
                        <Run Text="{Binding VideoCount, Mode=OneWay}"/> <Run Text="videos"/>
                    </TextBlock>
                    <TextBlock Foreground="#666" Margin="0,0,15,0">
                        <Run Text="{Binding AudioCount, Mode=OneWay}"/> <Run Text="audio"/>
                    </TextBlock>
                    <TextBlock Foreground="#666">
                        <Run Text="{Binding ImageCount, Mode=OneWay}"/> <Run Text="images"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
