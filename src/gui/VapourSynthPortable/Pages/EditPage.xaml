<UserControl x:Class="VapourSynthPortable.Pages.EditPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VapourSynthPortable.Controls"
             xmlns:vm="clr-namespace:VapourSynthPortable.ViewModels">

    <UserControl.DataContext>
        <vm:EditViewModel/>
    </UserControl.DataContext>

    <UserControl.InputBindings>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Y" Modifiers="Ctrl" Command="{Binding RedoCommand}"/>
        <KeyBinding Key="X" Modifiers="Ctrl" Command="{Binding CutClipCommand}"/>
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding CopyClipCommand}"/>
        <KeyBinding Key="V" Modifiers="Ctrl" Command="{Binding PasteClipCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteClipCommand}"/>
        <KeyBinding Key="S" Command="{Binding SplitClipCommand}"/>
        <KeyBinding Key="Space" Command="{Binding PlayCommand}"/>
        <KeyBinding Key="Home" Command="{Binding GoToStartCommand}"/>
        <KeyBinding Key="End" Command="{Binding GoToEndCommand}"/>
        <KeyBinding Key="Left" Command="{Binding StepBackwardCommand}"/>
        <KeyBinding Key="Right" Command="{Binding StepForwardCommand}"/>
        <KeyBinding Key="I" Command="{Binding SetInPointCommand}"/>
        <KeyBinding Key="O" Command="{Binding SetOutPointCommand}"/>
        <KeyBinding Key="T" Command="{Binding AddTextOverlayCommand}"/>
    </UserControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250" MinHeight="150"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#333" Padding="8,6">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Button Content="Import" Command="{Binding ImportMediaCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,0"/>

                    <Button Content="Add" Command="{Binding AddToTimelineCommand}"
                            ToolTip="Add to timeline (Append)"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0"/>
                    <Button Content="Insert" Command="{Binding InsertClipCommand}"
                            ToolTip="Insert at playhead"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,0"/>

                    <Button Content="Cut" Command="{Binding CutClipCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0" Width="50"/>
                    <Button Content="Copy" Command="{Binding CopyClipCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Width="50"/>
                    <Button Content="Paste" Command="{Binding PasteClipCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Width="50"/>
                    <Button Content="Delete" Command="{Binding DeleteClipCommand}"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Width="55"/>
                    <Button Content="Split" Command="{Binding SplitClipCommand}"
                            ToolTip="Split at playhead (S)"
                            Style="{StaticResource SecondaryButton}" Width="50"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,0"/>

                    <Button Content="Undo" Command="{Binding UndoCommand}"
                            IsEnabled="{Binding CanUndo}"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0" Width="50"/>
                    <Button Content="Redo" Command="{Binding RedoCommand}"
                            IsEnabled="{Binding CanRedo}"
                            Style="{StaticResource SecondaryButton}" Width="50"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,0"/>

                    <Button Content="+ Text" Command="{Binding AddTextOverlayCommand}"
                            ToolTip="Add text overlay (T)"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0" Width="55"/>
                    <Button Content="Del Text" Command="{Binding DeleteTextOverlayCommand}"
                            ToolTip="Delete selected text overlay"
                            Style="{StaticResource SecondaryButton}" Width="60"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <ToggleButton Content="Snap" IsChecked="{Binding SnapToClips}"
                                  ToolTip="Snap to clips"
                                  Style="{StaticResource ToggleButtonStyle}" Width="50" Margin="0,0,4,0"/>
                    <ToggleButton Content="Ripple" IsChecked="{Binding RippleEdit}"
                                  ToolTip="Ripple edit mode"
                                  Style="{StaticResource ToggleButtonStyle}" Width="55"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Preview Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Media Pool -->
            <Border Grid.Column="0" Background="#252526" Margin="10,10,5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2D2D2D" Padding="10,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Media Pool" Foreground="#F1F1F1" FontWeight="SemiBold" FontSize="12"/>
                            <TextBlock Text="{Binding MediaPool.Count, StringFormat=' ({0})'}"
                                       Foreground="#666" FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <ListBox Grid.Row="1" ItemsSource="{Binding MediaPool}"
                             SelectedItem="{Binding SelectedMediaItem}"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6,4" Margin="2" Background="#2A2A2A"
                                        CornerRadius="3" BorderBrush="#3A3A3A" BorderThickness="1"
                                        AllowDrop="False" MouseMove="MediaItem_MouseMove">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Thumbnail -->
                                        <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="2"
                                                Width="36" Height="24">
                                            <Image Source="{Binding Thumbnail}" Stretch="UniformToFill"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="6,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" Foreground="#DDD" FontSize="10"
                                                       TextTrimming="CharacterEllipsis"
                                                       ToolTip="{Binding Name}"/>
                                            <TextBlock Text="{Binding DurationFormatted}" Foreground="#666" FontSize="9"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding MediaPool.Count, Converter={StaticResource CountToVis}}">
                        <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                   Foreground="#444" HorizontalAlignment="Center"/>
                        <TextBlock Text="No media" Foreground="#555" FontSize="11"
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                        <Button Content="Import" Command="{Binding ImportMediaCommand}"
                                Style="{StaticResource SecondaryButton}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Source Monitor -->
            <Border Grid.Column="1" Background="#1E1E1E" Margin="5,10,5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2A2A2A" Padding="8,5">
                        <TextBlock Text="Source" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                    </Border>

                    <!-- Preview area -->
                    <Grid Grid.Row="1">
                        <!-- Placeholder when no source -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding SourceMonitorItem, Converter={StaticResource NullToVis}}">
                            <TextBlock Text="&#xE714;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                                       Foreground="#333" HorizontalAlignment="Center"/>
                            <TextBlock Text="Select media from pool" FontSize="11" Foreground="#555"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Source info -->
                        <Border VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding SourceMonitorItem, Converter={StaticResource NullToVis}, ConverterParameter=Invert}">
                            <StackPanel>
                                <Image Source="{Binding SourceMonitorItem.Thumbnail}"
                                       MaxWidth="200" MaxHeight="120" Stretch="Uniform"/>
                                <TextBlock Text="{Binding SourceMonitorItem.Name}" Foreground="#AAA"
                                           FontSize="11" HorizontalAlignment="Center" Margin="0,8,0,0"
                                           TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                <TextBlock Text="{Binding SourceMonitorItem.Resolution}" Foreground="#666"
                                           FontSize="10" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Source transport -->
                    <Border Grid.Row="2" Background="#2A2A2A" Padding="8,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="I" ToolTip="Set In Point (I)"
                                    Command="{Binding SetInPointCommand}"
                                    Width="24" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="&#xE892;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding StepBackwardCommand}"
                                        Width="28" Height="22" Background="#333" Foreground="#AAA"
                                        BorderThickness="0" ToolTip="Step back"/>
                                <Button Content="&#xE768;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding PlayCommand}"
                                        Width="32" Height="22" Background="#0E639C" Foreground="#FFF"
                                        BorderThickness="0" Margin="4,0" ToolTip="Play/Pause"/>
                                <Button Content="&#xE893;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding StepForwardCommand}"
                                        Width="28" Height="22" Background="#333" Foreground="#AAA"
                                        BorderThickness="0" ToolTip="Step forward"/>
                            </StackPanel>

                            <Button Grid.Column="2" Content="O" ToolTip="Set Out Point (O)"
                                    Command="{Binding SetOutPointCommand}"
                                    Width="24" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Divider -->
            <GridSplitter Grid.Column="2" Width="4" Background="#333"
                          VerticalAlignment="Stretch" HorizontalAlignment="Center"
                          Margin="0,10,0,5"/>

            <!-- Program Monitor -->
            <Border Grid.Column="3" Background="#1E1E1E" Margin="5,10,10,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2A2A2A" Padding="8,5">
                        <Grid>
                            <TextBlock Text="Program" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Timeline.PlayheadTimecode}" Foreground="#0E639C"
                                       FontSize="11" FontFamily="Consolas" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Preview area -->
                    <Grid Grid.Row="1">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="&#xE8B8;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                                       Foreground="#333" HorizontalAlignment="Center"/>
                            <TextBlock Text="Timeline output" FontSize="11" Foreground="#555"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="{Binding Timeline.DurationFormatted, StringFormat='Duration: {0}'}"
                                       FontSize="10" Foreground="#444"
                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Program transport -->
                    <Border Grid.Row="2" Background="#2A2A2A" Padding="8,5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="&#xE8A7;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding GoToStartCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Go to start"/>
                            <Button Content="&#xE892;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding StepBackwardCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Step back"/>
                            <Button x:Name="PlayButton" Content="&#xE768;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding PlayCommand}"
                                    Width="32" Height="22" Background="#0E639C" Foreground="#FFF"
                                    BorderThickness="0" Margin="4,0" ToolTip="Play/Pause (Space)"/>
                            <Button Content="&#xE71A;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding StopCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Stop"/>
                            <Button Content="&#xE893;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding StepForwardCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Step forward"/>
                            <Button Content="&#xE8A8;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding GoToEndCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Go to end"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Timeline Splitter -->
        <GridSplitter Grid.Row="2" Height="5" Background="#333"
                      HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

        <!-- Timeline -->
        <Border Grid.Row="3" Background="#1A1A1A" Margin="10,5,10,10">
            <controls:TimelineControl x:Name="TimelineControl"
                                      Timeline="{Binding Timeline}"
                                      ClipSelected="TimelineControl_ClipSelected"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" VerticalAlignment="Bottom"
                Background="#2D2D30" Height="22" Margin="10,0,10,10">
            <Grid Margin="10,0">
                <TextBlock Text="{Binding StatusText}" Foreground="#888" FontSize="10"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Playhead: " Foreground="#555" FontSize="10"/>
                    <TextBlock Text="{Binding Timeline.PlayheadTimecode}" Foreground="#AAA"
                               FontSize="10" FontFamily="Consolas"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
