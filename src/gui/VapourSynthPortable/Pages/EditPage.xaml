<UserControl x:Class="VapourSynthPortable.Pages.EditPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VapourSynthPortable.Controls"
             xmlns:vm="clr-namespace:VapourSynthPortable.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:EditViewModel}"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             AutomationProperties.Name="Edit Page"
             AutomationProperties.HelpText="Timeline editing and clip arrangement"
             KeyboardNavigation.TabNavigation="Cycle"
             KeyboardNavigation.DirectionalNavigation="Contained">

    <UserControl.InputBindings>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="{Binding UndoCommand}"/>
        <KeyBinding Key="Y" Modifiers="Ctrl" Command="{Binding RedoCommand}"/>
        <KeyBinding Key="X" Modifiers="Ctrl" Command="{Binding CutClipCommand}"/>
        <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding CopyClipCommand}"/>
        <KeyBinding Key="V" Modifiers="Ctrl" Command="{Binding PasteClipCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteClipCommand}"/>
        <KeyBinding Key="S" Command="{Binding SplitClipCommand}"/>
        <KeyBinding Key="Space" Command="{Binding PlayCommand}"/>
        <KeyBinding Key="Home" Command="{Binding GoToStartCommand}"/>
        <KeyBinding Key="End" Command="{Binding GoToEndCommand}"/>
        <KeyBinding Key="Left" Command="{Binding StepBackwardCommand}"/>
        <KeyBinding Key="Right" Command="{Binding StepForwardCommand}"/>
        <KeyBinding Key="I" Command="{Binding SetInPointCommand}"/>
        <KeyBinding Key="O" Command="{Binding SetOutPointCommand}"/>
        <KeyBinding Key="T" Command="{Binding AddTextOverlayCommand}"/>
        <KeyBinding Key="K" Command="{Binding AddKeyframeCommand}"/>
        <KeyBinding Key="K" Modifiers="Shift" Command="{Binding RemoveKeyframeCommand}"/>
        <!-- Keyframe navigation - [ and ] keys (may vary by keyboard layout) -->
        <KeyBinding Key="OemOpenBrackets" Command="{Binding PreviousKeyframeCommand}"/>
        <KeyBinding Key="OemCloseBrackets" Command="{Binding NextKeyframeCommand}"/>
        <!-- Alternative keyframe navigation - works on all keyboard layouts -->
        <KeyBinding Key="Left" Modifiers="Ctrl+Shift" Command="{Binding PreviousKeyframeCommand}"/>
        <KeyBinding Key="Right" Modifiers="Ctrl+Shift" Command="{Binding NextKeyframeCommand}"/>
        <!-- Marker shortcuts -->
        <KeyBinding Key="M" Command="{Binding AddMarkerCommand}"/>
        <KeyBinding Key="M" Modifiers="Shift" Command="{Binding DeleteMarkerCommand}"/>
        <KeyBinding Key="Left" Modifiers="Ctrl" Command="{Binding PreviousMarkerCommand}"/>
        <KeyBinding Key="Right" Modifiers="Ctrl" Command="{Binding NextMarkerCommand}"/>
    </UserControl.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" MinHeight="200"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250" MinHeight="150"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#333" Padding="8,6">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <Button Content="Add" Command="{Binding AddToTimelineCommand}"
                            AutomationProperties.AutomationId="AddToTimelineButton"
                            ToolTip="Add to timeline (Append)"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0"/>
                    <Button Content="Insert" Command="{Binding InsertClipCommand}"
                            AutomationProperties.AutomationId="InsertClipButton"
                            ToolTip="Insert at playhead"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,0"/>

                    <Button Content="Cut" Command="{Binding CutClipCommand}"
                            AutomationProperties.AutomationId="CutButton"
                            ToolTip="Cut clip (Ctrl+X)"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0" Width="50"/>
                    <Button Content="Copy" Command="{Binding CopyClipCommand}"
                            AutomationProperties.AutomationId="CopyButton"
                            ToolTip="Copy clip (Ctrl+C)"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Width="50"/>
                    <Button Content="Paste" Command="{Binding PasteClipCommand}"
                            AutomationProperties.AutomationId="PasteButton"
                            ToolTip="Paste clip (Ctrl+V)"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Width="50"/>
                    <Button Content="Delete" Command="{Binding DeleteClipCommand}"
                            AutomationProperties.AutomationId="DeleteButton"
                            ToolTip="Delete clip (Del)"
                            Style="{StaticResource SecondaryButton}" Margin="0,0,4,0" Width="55"/>
                    <Button Content="Split" Command="{Binding SplitClipCommand}"
                            AutomationProperties.AutomationId="SplitButton"
                            ToolTip="Split at playhead (S)"
                            Style="{StaticResource SecondaryButton}" Width="50"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,0"/>

                    <Button Content="Undo" Command="{Binding UndoCommand}"
                            AutomationProperties.AutomationId="UndoButton"
                            IsEnabled="{Binding CanUndo}"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0" Width="50">
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock Text="Undo (Ctrl+Z)" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding UndoDescription}" Foreground="#9E9E9E"
                                               Visibility="{Binding CanUndo, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>
                    <Button Content="Redo" Command="{Binding RedoCommand}"
                            AutomationProperties.AutomationId="RedoButton"
                            IsEnabled="{Binding CanRedo}"
                            Style="{StaticResource SecondaryButton}" Width="50">
                        <Button.ToolTip>
                            <ToolTip>
                                <StackPanel>
                                    <TextBlock Text="Redo (Ctrl+Y)" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding RedoDescription}" Foreground="#9E9E9E"
                                               Visibility="{Binding CanRedo, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                </StackPanel>
                            </ToolTip>
                        </Button.ToolTip>
                    </Button>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="8,0"/>

                    <Button Content="+ Text" Command="{Binding AddTextOverlayCommand}"
                            AutomationProperties.AutomationId="AddTextButton"
                            ToolTip="Add text overlay (T)"
                            Style="{StaticResource SecondaryButton}" Margin="8,0,4,0" Width="55"/>
                    <Button Content="Del Text" Command="{Binding DeleteTextOverlayCommand}"
                            AutomationProperties.AutomationId="DeleteTextButton"
                            ToolTip="Delete selected text overlay"
                            Style="{StaticResource SecondaryButton}" Width="60"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="+ Mark" Command="{Binding AddMarkerCommand}"
                            AutomationProperties.AutomationId="AddMarkerButton"
                            ToolTip="Add marker at playhead (M)"
                            Style="{StaticResource SecondaryButton}" Width="55" Margin="0,0,4,0"/>
                    <ToggleButton Content="Marks" IsChecked="{Binding ShowMarkerPanel}"
                                  AutomationProperties.AutomationId="MarkerPanelToggle"
                                  ToolTip="Show marker list panel"
                                  Style="{StaticResource ToggleButtonStyle}" Width="50" Margin="0,0,8,0"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,8,0"/>

                    <ToggleButton Content="Snap" IsChecked="{Binding SnapToClips}"
                                  AutomationProperties.AutomationId="SnapToggle"
                                  ToolTip="Snap to clips"
                                  Style="{StaticResource ToggleButtonStyle}" Width="50" Margin="0,0,4,0"/>
                    <ToggleButton Content="Ripple" IsChecked="{Binding RippleEdit}"
                                  AutomationProperties.AutomationId="RippleEditToggle"
                                  ToolTip="Ripple edit mode"
                                  Style="{StaticResource ToggleButtonStyle}" Width="55" Margin="0,0,4,0"/>
                    <ToggleButton Content="Keys" IsChecked="{Binding ShowKeyframePanel}"
                                  AutomationProperties.AutomationId="KeyframePanelToggle"
                                  ToolTip="Show keyframe editor panel"
                                  Style="{StaticResource ToggleButtonStyle}" Width="50" Margin="0,0,4,0"/>
                    <ToggleButton Content="Mixer" IsChecked="{Binding ShowMixerPanel}"
                                  AutomationProperties.AutomationId="MixerPanelToggle"
                                  ToolTip="Show audio mixer panel"
                                  Style="{StaticResource ToggleButtonStyle}" Width="50"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Preview Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Media Pool and Transitions Panel -->
            <Border Grid.Column="0" Background="#252526" Margin="10,10,5,5">
                <TabControl Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="#2D2D30"/>
                            <Setter Property="Foreground" Value="#888"/>
                            <Setter Property="Padding" Value="12,6"/>
                            <Setter Property="FontSize" Value="11"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="TabBorder" Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter x:Name="ContentSite" ContentSource="Header"
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter Property="Foreground" Value="#FFF"/>
                                                <Setter TargetName="TabBorder" Property="Background" Value="#3C3C3C"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Foreground" Value="#CCC"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- Media Tab -->
                    <TabItem Header="Media">
                        <Grid>
                            <ListBox ItemsSource="{Binding MediaPool}"
                                     AutomationProperties.AutomationId="MediaPoolList"
                                     SelectedItem="{Binding SelectedMediaItem}"
                                     Background="Transparent" BorderThickness="0"
                                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="6,4" Margin="2" Background="#2A2A2A"
                                                CornerRadius="3" BorderBrush="#3A3A3A" BorderThickness="1"
                                                AllowDrop="False" MouseMove="MediaItem_MouseMove">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Thumbnail -->
                                                <Border Grid.Column="0" Background="#1A1A1A" CornerRadius="2"
                                                        Width="36" Height="24">
                                                    <Image Source="{Binding Thumbnail}" Stretch="UniformToFill"/>
                                                </Border>

                                                <StackPanel Grid.Column="1" Margin="6,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" Foreground="#DDD" FontSize="10"
                                                               TextTrimming="CharacterEllipsis"
                                                               ToolTip="{Binding Name}"/>
                                                    <TextBlock Text="{Binding DurationFormatted}" Foreground="#9E9E9E" FontSize="9"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- Empty state -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                        Visibility="{Binding MediaPool.Count, Converter={StaticResource CountToVis}}">
                                <TextBlock Text="&#xE8B7;" FontFamily="Segoe MDL2 Assets" FontSize="24"
                                           Foreground="#444" HorizontalAlignment="Center"/>
                                <TextBlock Text="No media" Foreground="#9E9E9E" FontSize="11"
                                           HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                <TextBlock Text="Import media from the Media page" Foreground="#666" FontSize="10"
                                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>
                    </TabItem>

                    <!-- Transitions Tab -->
                    <TabItem Header="Transitions">
                        <controls:TransitionPanelControl/>
                    </TabItem>

                    <!-- Effects Tab -->
                    <TabItem Header="Effects">
                        <controls:EffectPanelControl/>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Source Monitor -->
            <Border Grid.Column="1" Background="#1E1E1E" Margin="5,10,5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2A2A2A" Padding="8,5">
                        <TextBlock Text="Source" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                    </Border>

                    <!-- Preview area -->
                    <Grid Grid.Row="1">
                        <!-- Video Player -->
                        <controls:VideoPlayerControl x:Name="SourcePlayer"
                                                     Visibility="{Binding SourceMonitorItem, Converter={StaticResource NullToVis}, ConverterParameter=Invert}"/>

                        <!-- Placeholder when no source -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding SourceMonitorItem, Converter={StaticResource NullToVis}}">
                            <TextBlock Text="&#xE714;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                                       Foreground="#333" HorizontalAlignment="Center"/>
                            <TextBlock Text="Select media from pool" FontSize="11" Foreground="#9E9E9E"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Source transport -->
                    <Border Grid.Row="2" Background="#2A2A2A" Padding="8,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="I" ToolTip="Set In Point (I)"
                                    Command="{Binding SetInPointCommand}"
                                    Width="24" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="&#xE892;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding StepBackwardCommand}"
                                        Width="28" Height="22" Background="#333" Foreground="#AAA"
                                        BorderThickness="0" ToolTip="Step back"/>
                                <Button Content="&#xE768;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding PlayCommand}"
                                        Width="32" Height="22" Background="#0E639C" Foreground="#FFF"
                                        BorderThickness="0" Margin="4,0" ToolTip="Play/Pause"/>
                                <Button Content="&#xE893;" FontFamily="Segoe MDL2 Assets"
                                        Command="{Binding StepForwardCommand}"
                                        Width="28" Height="22" Background="#333" Foreground="#AAA"
                                        BorderThickness="0" ToolTip="Step forward"/>
                            </StackPanel>

                            <Button Grid.Column="2" Content="O" ToolTip="Set Out Point (O)"
                                    Command="{Binding SetOutPointCommand}"
                                    Width="24" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Divider -->
            <GridSplitter Grid.Column="2" Width="4" Background="#333"
                          VerticalAlignment="Stretch" HorizontalAlignment="Center"
                          Margin="0,10,0,5"/>

            <!-- Program Monitor -->
            <Border Grid.Column="3" Background="#1E1E1E" Margin="5,10,10,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2A2A2A" Padding="8,5">
                        <Grid>
                            <TextBlock Text="Program" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Timeline.PlayheadTimecode}" Foreground="#0E639C"
                                       FontSize="11" FontFamily="Consolas" HorizontalAlignment="Right"/>
                        </Grid>
                    </Border>

                    <!-- Preview area -->
                    <Grid Grid.Row="1">
                        <!-- Video Player for timeline playback (only visible when timeline has clips) -->
                        <controls:VideoPlayerControl x:Name="ProgramPlayer"
                                                     Visibility="{Binding Timeline.HasClips, Converter={StaticResource BoolToVisibilityConverter}}"/>

                        <!-- Scrub preview overlay (shown during scrubbing) -->
                        <Border Background="#1A1A1A" CornerRadius="4"
                                Visibility="{Binding IsScrubbing, Converter={StaticResource BoolToVisibilityConverter}}"
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                Padding="8">
                            <Grid>
                                <Image Source="{Binding ScrubPreviewFrame}"
                                       MaxWidth="480" MaxHeight="270"
                                       Stretch="Uniform"/>
                                <TextBlock Text="Scrubbing..."
                                           Foreground="#9E9E9E" FontSize="10"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding ScrubPreviewFrame, Converter={StaticResource NullToVis}}"/>
                            </Grid>
                        </Border>

                        <!-- Placeholder when empty timeline -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                    Visibility="{Binding Timeline.HasClips, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                            <TextBlock Text="&#xE8B8;" FontFamily="Segoe MDL2 Assets" FontSize="36"
                                       Foreground="#333" HorizontalAlignment="Center"/>
                            <TextBlock Text="Add clips to timeline" FontSize="11" Foreground="#9E9E9E"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="{Binding Timeline.DurationFormatted, StringFormat='Duration: {0}'}"
                                       FontSize="10" Foreground="#444"
                                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Program transport -->
                    <Border Grid.Row="2" Background="#2A2A2A" Padding="8,5">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="&#xE8A7;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding GoToStartCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Go to start"/>
                            <Button Content="&#xE892;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding StepBackwardCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Step back"/>
                            <Button x:Name="PlayButton" Content="&#xE768;" FontFamily="Segoe MDL2 Assets"
                                    AutomationProperties.AutomationId="PlayButton"
                                    Command="{Binding PlayCommand}"
                                    Width="32" Height="22" Background="#0E639C" Foreground="#FFF"
                                    BorderThickness="0" Margin="4,0" ToolTip="Play/Pause (Space)"/>
                            <Button Content="&#xE71A;" FontFamily="Segoe MDL2 Assets"
                                    AutomationProperties.AutomationId="StopButton"
                                    Command="{Binding StopCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Stop"/>
                            <Button Content="&#xE893;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding StepForwardCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Step forward"/>
                            <Button Content="&#xE8A8;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding GoToEndCommand}"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" ToolTip="Go to end"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Timeline Splitter -->
        <GridSplitter Grid.Row="2" Height="5" Background="#333"
                      HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

        <!-- Timeline and Keyframe Editor -->
        <Grid Grid.Row="3" Margin="10,5,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding MarkerPanelWidth, FallbackValue=0}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="{Binding KeyframePanelWidth, FallbackValue=0}"/>
            </Grid.ColumnDefinitions>

            <!-- Marker Panel -->
            <Border Grid.Column="0" Background="#252526"
                    Visibility="{Binding ShowMarkerPanel, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Marker Panel Header -->
                    <Border Grid.Row="0" Background="#2A2A2A" Padding="8,6">
                        <Grid>
                            <TextBlock Text="Markers" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Timeline.Markers.Count, StringFormat=({0})}"
                                       Foreground="#666" FontSize="10"
                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Marker List -->
                    <ListBox Grid.Row="1" ItemsSource="{Binding Timeline.Markers}"
                             SelectedItem="{Binding Timeline.SelectedMarker}"
                             AutomationProperties.AutomationId="MarkerList"
                             Background="Transparent" BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6,4" Margin="2" Background="#2A2A2A"
                                        CornerRadius="3" BorderBrush="#3A3A3A" BorderThickness="1"
                                        Cursor="Hand">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                      Command="{Binding DataContext.GoToMarkerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Marker color indicator -->
                                        <Ellipse Grid.Column="0" Width="8" Height="8"
                                                 Fill="{Binding Color, Converter={StaticResource ColorToBrushConverter}}"
                                                 VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                            <TextBlock Text="{Binding Name}" Foreground="#DDD" FontSize="10"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Foreground="#9E9E9E" FontSize="9" FontFamily="Consolas">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0:D5}">
                                                        <Binding Path="Frame"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state -->
                    <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding Timeline.Markers.Count, Converter={StaticResource CountToVis}}">
                        <TextBlock Text="&#xED63;" FontFamily="Segoe MDL2 Assets" FontSize="20"
                                   Foreground="#444" HorizontalAlignment="Center"/>
                        <TextBlock Text="No markers" Foreground="#9E9E9E" FontSize="10"
                                   HorizontalAlignment="Center" Margin="0,6,0,0"/>
                        <TextBlock Text="Press M to add" Foreground="#666" FontSize="9"
                                   HorizontalAlignment="Center" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Marker Panel Footer -->
                    <Border Grid.Row="2" Background="#2A2A2A" Padding="4">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="&#xE893;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding PreviousMarkerCommand}"
                                    ToolTip="Previous marker (Ctrl+Left)"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0"/>
                            <Button Content="&#xE892;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding NextMarkerCommand}"
                                    ToolTip="Next marker (Ctrl+Right)"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0" Margin="4,0"/>
                            <Button Content="&#xE74D;" FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding DeleteMarkerCommand}"
                                    ToolTip="Delete selected marker (Shift+M)"
                                    Width="28" Height="22" Background="#333" Foreground="#AAA"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Marker Panel Splitter -->
            <GridSplitter Grid.Column="1" Width="4" Background="#333"
                          VerticalAlignment="Stretch" HorizontalAlignment="Center"
                          Visibility="{Binding ShowMarkerPanel, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Timeline -->
            <Border Grid.Column="2" Background="#1A1A1A">
                <controls:TimelineControl x:Name="TimelineControl"
                                          AutomationProperties.AutomationId="TimelineControl"
                                          Timeline="{Binding Timeline}"
                                          ClipSelected="TimelineControl_ClipSelected"/>
            </Border>

            <!-- Keyframe Panel Splitter -->
            <GridSplitter Grid.Column="3" Width="4" Background="#333"
                          VerticalAlignment="Stretch" HorizontalAlignment="Center"
                          Visibility="{Binding ShowKeyframePanel, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <!-- Keyframe Editor Panel -->
            <Border Grid.Column="4" Background="#252526"
                    Visibility="{Binding ShowKeyframePanel, Converter={StaticResource BoolToVisibilityConverter}}">
                <controls:KeyframeEditorControl
                    SelectedEffect="{Binding SelectedEffect}"
                    SelectedParameter="{Binding SelectedParameter}"
                    CurrentFrame="{Binding Timeline.PlayheadFrame}"/>
            </Border>
        </Grid>

        <!-- Audio Mixer Panel -->
        <Border Grid.Row="3" VerticalAlignment="Bottom" Margin="10,0,10,30"
                Background="#252526" Height="{Binding MixerPanelHeight}"
                Visibility="{Binding ShowMixerPanel, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Mixer Header -->
                <Border Grid.Row="0" Background="#2A2A2A" Padding="10,4">
                    <Grid>
                        <TextBlock Text="Audio Mixer" Foreground="#AAA" FontSize="11" FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Mute All" Command="{Binding MuteAllTracksCommand}"
                                    Style="{StaticResource SecondaryButtonSmall}" Width="60" Margin="0,0,4,0"/>
                            <Button Content="Unmute" Command="{Binding UnmuteAllTracksCommand}"
                                    Style="{StaticResource SecondaryButtonSmall}" Width="55"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Mixer Channels -->
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding AudioTracks}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="80" Background="#1E1E1E" Margin="2" Padding="4" CornerRadius="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Track Name -->
                                        <TextBlock Grid.Row="0" Text="{Binding Name}" Foreground="#AAA" FontSize="10"
                                                   HorizontalAlignment="Center" Margin="0,2"/>

                                        <!-- Volume Slider (vertical) -->
                                        <Slider Grid.Row="1" Orientation="Vertical" Minimum="0" Maximum="2"
                                                Value="{Binding Volume}" Height="50" HorizontalAlignment="Center"
                                                ToolTip="{Binding VolumeDb, StringFormat='{}{0:F1} dB'}"/>

                                        <!-- Pan Slider -->
                                        <Slider Grid.Row="2" Orientation="Horizontal" Minimum="-1" Maximum="1"
                                                Value="{Binding Pan}" Width="60" HorizontalAlignment="Center"
                                                ToolTip="{Binding PanDisplay}" Margin="0,4"/>

                                        <!-- Mute/Solo Buttons -->
                                        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4">
                                            <ToggleButton Content="M" IsChecked="{Binding IsMuted}"
                                                          ToolTip="Mute track"
                                                          Width="24" Height="20" FontSize="10" Margin="0,0,2,0">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Background" Value="#333"/>
                                                        <Setter Property="Foreground" Value="#AAA"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter Property="Background" Value="#C75050"/>
                                                                <Setter Property="Foreground" Value="#FFF"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                            <ToggleButton Content="S" IsChecked="{Binding IsSolo}"
                                                          ToolTip="Solo track"
                                                          Width="24" Height="20" FontSize="10">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Background" Value="#333"/>
                                                        <Setter Property="Foreground" Value="#AAA"/>
                                                        <Setter Property="BorderThickness" Value="0"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter Property="Background" Value="#4ACF6A"/>
                                                                <Setter Property="Foreground" Value="#FFF"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" VerticalAlignment="Bottom"
                Background="#2D2D30" Height="22" Margin="10,0,10,10">
            <Grid Margin="10,0">
                <TextBlock Text="{Binding StatusText}" Foreground="#AAA" FontSize="10"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="Playhead: " Foreground="#9E9E9E" FontSize="10"/>
                    <TextBlock Text="{Binding Timeline.PlayheadTimecode}" Foreground="#AAA"
                               FontSize="10" FontFamily="Consolas"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
