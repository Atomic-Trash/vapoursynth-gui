<UserControl x:Class="VapourSynthPortable.Controls.TransitionPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VapourSynthPortable.Controls"
             xmlns:models="clr-namespace:VapourSynthPortable.Models">

    <UserControl.Resources>
        <Style x:Key="TransitionButton" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#007ACC"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8,12,8,6"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505054"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Transitions" Foreground="#F1F1F1" FontWeight="SemiBold" FontSize="13"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Duration:" Foreground="#888" FontSize="10"
                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="DurationTextBox" Width="40" Background="#333" Foreground="#CCC"
                             BorderThickness="0" Padding="4,2" FontSize="10" TextAlignment="Center"
                             Text="{Binding TransitionDuration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="f" Foreground="#666" FontSize="10"
                               VerticalAlignment="Center" Margin="2,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Transition Browser -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Dissolves -->
                <TextBlock Text="Dissolves" Style="{StaticResource CategoryHeader}"/>
                <WrapPanel Margin="4,0">
                    <Button Style="{StaticResource TransitionButton}" Tag="CrossDissolve"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M0,0 L10,10 M10,0 L0,10" Stroke="#AAA" StrokeThickness="1.5"
                                  HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Dissolve" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TransitionButton}" Tag="DipToBlack"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Border Background="#333" Width="20" Height="16" CornerRadius="2"/>
                            <TextBlock Text="Dip Black" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TransitionButton}" Tag="DipToWhite"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Border Background="#EEE" Width="20" Height="16" CornerRadius="2"/>
                            <TextBlock Text="Dip White" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- Fades -->
                <TextBlock Text="Fades" Style="{StaticResource CategoryHeader}"/>
                <WrapPanel Margin="4,0">
                    <Button Style="{StaticResource TransitionButton}" Tag="FadeIn"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M0,16 L20,16 L20,0" Stroke="#AAA" StrokeThickness="1.5"
                                  Fill="Transparent" HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Fade In" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TransitionButton}" Tag="FadeOut"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M0,0 L20,0 L0,16" Stroke="#AAA" StrokeThickness="1.5"
                                  Fill="Transparent" HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Fade Out" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- Wipes -->
                <TextBlock Text="Wipes" Style="{StaticResource CategoryHeader}"/>
                <WrapPanel Margin="4,0">
                    <Button Style="{StaticResource TransitionButton}" Tag="WipeLeft"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M15,0 L0,8 L15,16" Stroke="#AAA" StrokeThickness="1.5"
                                  Fill="Transparent" HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Wipe Left" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TransitionButton}" Tag="WipeRight"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M5,0 L20,8 L5,16" Stroke="#AAA" StrokeThickness="1.5"
                                  Fill="Transparent" HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Wipe Right" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TransitionButton}" Tag="WipeUp"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M0,12 L10,0 L20,12" Stroke="#AAA" StrokeThickness="1.5"
                                  Fill="Transparent" HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Wipe Up" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TransitionButton}" Tag="WipeDown"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M0,4 L10,16 L20,4" Stroke="#AAA" StrokeThickness="1.5"
                                  Fill="Transparent" HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Wipe Down" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- Slides -->
                <TextBlock Text="Slides &amp; Pushes" Style="{StaticResource CategoryHeader}"/>
                <WrapPanel Margin="4,0">
                    <Button Style="{StaticResource TransitionButton}" Tag="SlideLeft"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Grid Width="20" Height="16">
                                <Rectangle Fill="#555" Width="10" Height="16" HorizontalAlignment="Right"/>
                                <Path Data="M12,8 L4,4 L4,12 Z" Fill="#AAA"/>
                            </Grid>
                            <TextBlock Text="Slide Left" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TransitionButton}" Tag="PushRight"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Grid Width="20" Height="16">
                                <Rectangle Fill="#555" Width="10" Height="16" HorizontalAlignment="Left"/>
                                <Path Data="M8,8 L16,4 L16,12 Z" Fill="#AAA"/>
                            </Grid>
                            <TextBlock Text="Push Right" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>

                <!-- No Transition -->
                <TextBlock Text="Other" Style="{StaticResource CategoryHeader}"/>
                <WrapPanel Margin="4,0">
                    <Button Style="{StaticResource TransitionButton}" Tag="Cut"
                            Click="ApplyTransition_Click" Width="70">
                        <StackPanel>
                            <Path Data="M0,8 L20,8" Stroke="#AAA" StrokeThickness="2"
                                  StrokeDashArray="2 2" HorizontalAlignment="Center" Width="20" Height="16"/>
                            <TextBlock Text="Cut" FontSize="9" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Actions -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Select two adjacent clips to apply" Foreground="#666"
                           FontSize="10" VerticalAlignment="Center" TextWrapping="Wrap"/>

                <Button Grid.Column="1" Content="Remove" Style="{StaticResource ActionButton}"
                        Click="RemoveTransition_Click" ToolTip="Remove transition from selected clips"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
