<UserControl x:Class="VapourSynthPortable.Controls.EffectPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VapourSynthPortable.Controls"
             xmlns:models="clr-namespace:VapourSynthPortable.Models"
             Focusable="True"
             KeyboardNavigation.TabNavigation="Local"
             FocusVisualStyle="{x:Null}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:ParameterTypeToVisibilityConverter x:Key="ParameterTypeToVisibility"/>

        <Style x:Key="EffectButton" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505054"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource EffectButton}">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Effects" Foreground="#F1F1F1" FontWeight="SemiBold" FontSize="13"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Timeline.SelectedClip.Effects.Count, StringFormat=' ({0})'}"
                               Foreground="#888" FontSize="12" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="&#xE710;" Style="{StaticResource IconButton}"
                            ToolTip="Add Effect" Click="AddEffect_Click"
                            AutomationProperties.Name="Add Effect"
                            AutomationProperties.HelpText="Open the effect selection menu"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Add Effect Dropdown (shown when adding) -->
        <Border Grid.Row="1" Background="#1E1E1E" Padding="8"
                Visibility="{Binding ShowAddEffectDropdown, Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}"
                x:Name="AddEffectDropdown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MaxHeight="200"/>
                </Grid.RowDefinitions>

                <TextBox x:Name="EffectSearchBox" Grid.Row="0"
                         Background="#333" Foreground="#CCC" BorderThickness="0"
                         Padding="8,6" Margin="0,0,0,8"
                         Text="{Binding EffectSearchText, UpdateSourceTrigger=PropertyChanged}"
                         Tag="Search effects..."
                         AutomationProperties.Name="Search Effects"
                         AutomationProperties.HelpText="Type to filter available effects"/>

                <ListBox Grid.Row="1" x:Name="EffectList"
                         Background="Transparent" BorderThickness="0"
                         ItemsSource="{Binding FilteredEffects}"
                         SelectionChanged="EffectList_SelectionChanged">
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Foreground="#007ACC"
                                               FontSize="11" FontWeight="SemiBold" Margin="4,8,4,4"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" Foreground="#DDD" FontSize="11"/>
                                    <TextBlock Text="{Binding Description}" Foreground="#666" FontSize="9"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Effect Stack -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Timeline.SelectedClip.Effects}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:TimelineEffect}">
                        <Border Background="#2A2A2A" Margin="4" CornerRadius="4"
                                BorderBrush="#3A3A3A" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Effect Header -->
                                <Border Grid.Row="0" Background="#333" CornerRadius="4,4,0,0" Padding="8,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Enable/Disable Toggle -->
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}"
                                                  VerticalAlignment="Center" Margin="0,0,8,0"/>

                                        <!-- Effect Name -->
                                        <TextBlock Grid.Column="1" Text="{Binding Name}"
                                                   FontSize="11" FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Cursor="Hand"
                                                   MouseLeftButtonDown="EffectHeader_Click">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#DDD"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                            <Setter Property="Foreground" Value="#666"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <!-- Effect Actions -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <Button Content="&#xE74A;" Style="{StaticResource IconButton}"
                                                    ToolTip="Move Up" Tag="{Binding}"
                                                    Click="MoveEffectUp_Click"
                                                    AutomationProperties.Name="Move Effect Up"
                                                    AutomationProperties.HelpText="Move this effect earlier in the effect stack"/>
                                            <Button Content="&#xE74B;" Style="{StaticResource IconButton}"
                                                    ToolTip="Move Down" Tag="{Binding}"
                                                    Click="MoveEffectDown_Click"
                                                    AutomationProperties.Name="Move Effect Down"
                                                    AutomationProperties.HelpText="Move this effect later in the effect stack"/>
                                            <Button Content="&#xE74D;" Style="{StaticResource IconButton}"
                                                    ToolTip="Delete" Tag="{Binding}"
                                                    Click="DeleteEffect_Click"
                                                    AutomationProperties.Name="Delete Effect"
                                                    AutomationProperties.HelpText="Remove this effect from the clip"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!-- Effect Parameters (collapsible) -->
                                <Border Grid.Row="1" Padding="8"
                                        Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVis}}">
                                    <ItemsControl ItemsSource="{Binding Parameters}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate DataType="{x:Type models:EffectParameter}">
                                                <Grid Margin="0,4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="90"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               Text="{Binding DisplayName}"
                                                               Foreground="#AAA" FontSize="10"
                                                               VerticalAlignment="Center"
                                                               ToolTip="{Binding Description}"/>

                                                    <!-- Integer Parameter - Slider + TextBox -->
                                                    <Grid Grid.Column="1"
                                                          Visibility="{Binding ParameterType, Converter={StaticResource ParameterTypeToVisibility}, ConverterParameter=Integer}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="50"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Slider Grid.Column="0" VerticalAlignment="Center"
                                                                Minimum="{Binding MinValue, FallbackValue=0}"
                                                                Maximum="{Binding MaxValue, FallbackValue=100}"
                                                                Value="{Binding Value, Mode=TwoWay}"
                                                                SmallChange="1" LargeChange="10"
                                                                IsSnapToTickEnabled="True" TickFrequency="1"
                                                                Margin="0,0,8,0"/>
                                                        <TextBox Grid.Column="1"
                                                                 Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                 Background="#333" Foreground="#CCC"
                                                                 BorderThickness="0" Padding="4,2"
                                                                 FontSize="10" TextAlignment="Center"/>
                                                    </Grid>

                                                    <!-- Float Parameter - Slider + TextBox -->
                                                    <Grid Grid.Column="1"
                                                          Visibility="{Binding ParameterType, Converter={StaticResource ParameterTypeToVisibility}, ConverterParameter=Float}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="50"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Slider Grid.Column="0" VerticalAlignment="Center"
                                                                Minimum="{Binding MinValue, FallbackValue=0}"
                                                                Maximum="{Binding MaxValue, FallbackValue=1}"
                                                                Value="{Binding Value, Mode=TwoWay}"
                                                                SmallChange="0.01" LargeChange="0.1"
                                                                Margin="0,0,8,0"/>
                                                        <TextBox Grid.Column="1"
                                                                 Text="{Binding Value, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}"
                                                                 Background="#333" Foreground="#CCC"
                                                                 BorderThickness="0" Padding="4,2"
                                                                 FontSize="10" TextAlignment="Center"/>
                                                    </Grid>

                                                    <!-- Boolean Parameter - CheckBox -->
                                                    <CheckBox Grid.Column="1"
                                                              IsChecked="{Binding Value}"
                                                              VerticalAlignment="Center"
                                                              Visibility="{Binding ParameterType, Converter={StaticResource ParameterTypeToVisibility}, ConverterParameter=Boolean}"/>

                                                    <!-- Enum Parameter - ComboBox -->
                                                    <ComboBox Grid.Column="1"
                                                              ItemsSource="{Binding Options}"
                                                              SelectedItem="{Binding Value}"
                                                              Background="#333" Foreground="#CCC"
                                                              BorderThickness="0" Padding="4,2"
                                                              FontSize="10"
                                                              Visibility="{Binding ParameterType, Converter={StaticResource ParameterTypeToVisibility}, ConverterParameter=Enum}"/>

                                                    <!-- String Parameter - TextBox -->
                                                    <TextBox Grid.Column="1"
                                                             Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                             Background="#333" Foreground="#CCC"
                                                             BorderThickness="0" Padding="6,4"
                                                             FontSize="10"
                                                             Visibility="{Binding ParameterType, Converter={StaticResource ParameterTypeToVisibility}, ConverterParameter=String}"/>

                                                    <!-- Color Parameter - Color Picker Button -->
                                                    <Button Grid.Column="1"
                                                            Content="Pick Color"
                                                            Style="{StaticResource EffectButton}"
                                                            FontSize="9" Padding="4,2"
                                                            Click="ColorPicker_Click" Tag="{Binding}"
                                                            Visibility="{Binding ParameterType, Converter={StaticResource ParameterTypeToVisibility}, ConverterParameter=Color}"/>

                                                    <!-- File Parameter - Browse Button -->
                                                    <Grid Grid.Column="1"
                                                          Visibility="{Binding ParameterType, Converter={StaticResource ParameterTypeToVisibility}, ConverterParameter=File}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBox Grid.Column="0"
                                                                 Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                                 Background="#333" Foreground="#CCC"
                                                                 BorderThickness="0" Padding="4,2"
                                                                 FontSize="10"/>
                                                        <Button Grid.Column="1" Content="..."
                                                                Style="{StaticResource EffectButton}"
                                                                FontSize="10" Padding="6,2" Margin="4,0,0,0"
                                                                Click="BrowseFile_Click" Tag="{Binding}"/>
                                                    </Grid>

                                                    <!-- Reset Button (shown when modified) -->
                                                    <Button Grid.Column="2" Content="&#xE72C;"
                                                            Style="{StaticResource IconButton}"
                                                            Width="20" Height="20" FontSize="10"
                                                            ToolTip="Reset to Default"
                                                            Click="ResetParameter_Click" Tag="{Binding}"
                                                            Visibility="{Binding IsModified, Converter={StaticResource BoolToVis}}"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- No Effects Placeholder -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Visibility="{Binding Timeline.SelectedClip.HasEffects, Converter={StaticResource InverseBoolToVis}, FallbackValue=Visible}">
            <TextBlock Text="&#xE90F;" FontFamily="Segoe MDL2 Assets" FontSize="32"
                       Foreground="#444" HorizontalAlignment="Center"/>
            <TextBlock Text="No effects applied" Foreground="#666" FontSize="11"
                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
            <Button Content="Add Effect" Style="{StaticResource EffectButton}"
                    Margin="0,12,0,0" Click="AddEffect_Click"/>
        </StackPanel>

        <!-- Footer Actions -->
        <Border Grid.Row="3" Background="#2D2D30" Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Copy" Style="{StaticResource EffectButton}"
                        Command="{Binding CopyEffectsFromClipCommand}"
                        ToolTip="Copy all effects"
                        AutomationProperties.Name="Copy Effects"
                        AutomationProperties.HelpText="Copy all effects from the selected clip"/>
                <Button Content="Paste" Style="{StaticResource EffectButton}"
                        Command="{Binding PasteEffectsToClipCommand}"
                        ToolTip="Paste effects"
                        AutomationProperties.Name="Paste Effects"
                        AutomationProperties.HelpText="Paste copied effects to the selected clip"/>
                <Button Content="Clear" Style="{StaticResource EffectButton}"
                        Command="{Binding ClearAllEffectsCommand}"
                        ToolTip="Remove all effects"
                        AutomationProperties.Name="Clear Effects"
                        AutomationProperties.HelpText="Remove all effects from the selected clip"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
