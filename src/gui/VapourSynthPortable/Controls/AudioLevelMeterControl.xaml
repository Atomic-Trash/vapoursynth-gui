<UserControl x:Class="VapourSynthPortable.Controls.AudioLevelMeterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="MeterRoot"
             Background="#1E1E1E"
             MinWidth="40" MinHeight="100">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Meter Display Area -->
        <Grid Grid.Column="0" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Channel Meter -->
            <Border Grid.Column="0" Background="#252526" CornerRadius="2">
                <Canvas x:Name="LeftMeterCanvas" ClipToBounds="True"/>
            </Border>

            <!-- Right Channel Meter -->
            <Border Grid.Column="2" Background="#252526" CornerRadius="2">
                <Canvas x:Name="RightMeterCanvas" ClipToBounds="True"/>
            </Border>
        </Grid>

        <!-- dB Scale -->
        <Canvas Grid.Column="1" x:Name="ScaleCanvas" Width="24" Margin="2,4,4,4"
                ClipToBounds="True"/>
    </Grid>
</UserControl>
