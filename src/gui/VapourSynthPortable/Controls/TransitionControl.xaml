<UserControl x:Class="VapourSynthPortable.Controls.TransitionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="TransitionRoot"
             Width="60" Height="40">

    <Border Background="#40808080" BorderBrush="#666" BorderThickness="1" CornerRadius="4"
            ToolTip="{Binding TransitionType}" Cursor="Hand">
        <Grid>
            <!-- Transition icon -->
            <Path Data="M0,15 L15,0 L30,15 L15,30 Z" Fill="#AAA"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  Stretch="Uniform" Width="20" Height="20"/>

            <!-- Duration indicator -->
            <TextBlock Text="{Binding DurationFrames, StringFormat='{}{0}f'}"
                       Foreground="#CCC" FontSize="10"
                       HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Margin="0,0,0,2"/>
        </Grid>
    </Border>
</UserControl>
