<UserControl x:Class="VapourSynthPortable.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ToastRoot"
             Opacity="0" IsHitTestVisible="False">

    <UserControl.Resources>
        <Storyboard x:Key="ShowAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.2"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                From="0,20,0,0" To="0,0,0,0" Duration="0:0:0.2">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <Storyboard x:Key="HideAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1" To="0" Duration="0:0:0.3"/>
            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                From="0,0,0,0" To="0,-10,0,0" Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="ToastBorder" Background="#1F1F1F" BorderBrush="#3A3A3A" BorderThickness="1"
            CornerRadius="8" Padding="16,12" MinWidth="200" MaxWidth="400"
            HorizontalAlignment="Center" VerticalAlignment="Top"
            Effect="{DynamicResource ToastShadow}">
        <Border.Resources>
            <DropShadowEffect x:Key="ToastShadow" BlurRadius="20" ShadowDepth="4"
                              Opacity="0.4" Color="Black"/>
        </Border.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <Border x:Name="IconBorder" Grid.Column="0" Width="24" Height="24"
                    CornerRadius="12" Margin="0,0,12,0"
                    Background="#2D5A2D" Visibility="Collapsed">
                <TextBlock x:Name="IconText" Text="&#xE73E;" FontFamily="Segoe MDL2 Assets"
                           FontSize="12" Foreground="#4CAF50"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Message -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="MessageText" Text="Operation completed"
                           Foreground="#EEEEEE" FontSize="13" TextWrapping="Wrap"
                           FontFamily="{StaticResource InterMedium}"/>
                <TextBlock x:Name="DetailText" Foreground="#888888" FontSize="11"
                           TextWrapping="Wrap" Margin="0,2,0,0" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
