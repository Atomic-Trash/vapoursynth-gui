<UserControl x:Class="VapourSynthPortable.Controls.KeyframeEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:VapourSynthPortable.Controls"
             xmlns:models="clr-namespace:VapourSynthPortable.Models"
             Focusable="True"
             KeyboardNavigation.TabNavigation="Local"
             FocusVisualStyle="{x:Null}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="KeyframeButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InterpolationCombo" TargetType="ComboBox">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Keyframes" Foreground="#F1F1F1" FontWeight="SemiBold" FontSize="13"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="KeyframeCount" Foreground="#888" FontSize="12"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Add Keyframe Button -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource KeyframeButton}" Click="AddKeyframe_Click"
                            ToolTip="Add keyframe at current frame"
                            AutomationProperties.Name="Add Keyframe"
                            AutomationProperties.HelpText="Add a keyframe at the current frame position">
                        <Path Data="M10,0 L10,20 M0,10 L20,10" Stroke="#AAA" StrokeThickness="2"
                              Width="12" Height="12" Stretch="Uniform"/>
                    </Button>
                    <Button Style="{StaticResource KeyframeButton}" Click="RemoveKeyframe_Click"
                            ToolTip="Remove keyframe at current frame"
                            AutomationProperties.Name="Remove Keyframe"
                            AutomationProperties.HelpText="Remove the keyframe at the current frame position">
                        <Path Data="M0,10 L20,10" Stroke="#AAA" StrokeThickness="2"
                              Width="12" Height="12" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Keyframe Tracks List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TracksControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type models:KeyframeTrack}">
                        <Border Background="#2A2A2A" Margin="4" CornerRadius="4"
                                BorderBrush="#3A3A3A" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Track Header -->
                                <Border Grid.Row="0" Background="#333" CornerRadius="4,4,0,0" Padding="8,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Enable Toggle -->
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsEnabled}"
                                                  VerticalAlignment="Center" Margin="0,0,8,0"/>

                                        <!-- Track Name -->
                                        <TextBlock Grid.Column="1" Text="{Binding DisplayName}"
                                                   FontSize="11" Foreground="#DDD"
                                                   VerticalAlignment="Center"/>

                                        <!-- Keyframe Count -->
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding Keyframes.Count, StringFormat='{}{0} keys'}"
                                                   FontSize="10" Foreground="#888"
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <!-- Keyframe Timeline Strip -->
                                <Border Grid.Row="1" Background="#1E1E1E" Height="30"
                                        Visibility="{Binding IsEnabled, Converter={StaticResource BoolToVis}}">
                                    <Canvas x:Name="KeyframeCanvas" ClipToBounds="True">
                                        <!-- Keyframes will be drawn here programmatically -->
                                    </Canvas>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- No Keyframes Placeholder -->
        <StackPanel x:Name="EmptyState" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Path Data="M10,0 L10,20 M0,10 L20,10" Stroke="#444" StrokeThickness="3"
                  Width="32" Height="32" Stretch="Uniform" HorizontalAlignment="Center"/>
            <TextBlock Text="No keyframes" Foreground="#666" FontSize="11"
                       HorizontalAlignment="Center" Margin="0,8,0,0"/>
            <TextBlock Text="Select an effect parameter and" Foreground="#555" FontSize="10"
                       HorizontalAlignment="Center" Margin="0,4,0,0"/>
            <TextBlock Text="click + to add a keyframe" Foreground="#555" FontSize="10"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Footer - Navigation and Interpolation -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Keyframe Navigation -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource KeyframeButton}" Click="PreviousKeyframe_Click"
                            ToolTip="Previous keyframe"
                            AutomationProperties.Name="Previous Keyframe"
                            AutomationProperties.HelpText="Navigate to the previous keyframe">
                        <Path Data="M12,0 L0,10 L12,20" Stroke="#AAA" StrokeThickness="2"
                              Width="10" Height="12" Stretch="Uniform"/>
                    </Button>
                    <Button Style="{StaticResource KeyframeButton}" Click="NextKeyframe_Click"
                            ToolTip="Next keyframe"
                            AutomationProperties.Name="Next Keyframe"
                            AutomationProperties.HelpText="Navigate to the next keyframe">
                        <Path Data="M0,0 L12,10 L0,20" Stroke="#AAA" StrokeThickness="2"
                              Width="10" Height="12" Stretch="Uniform"/>
                    </Button>
                </StackPanel>

                <!-- Current Frame Info -->
                <TextBlock Grid.Column="1" x:Name="FrameInfo" Foreground="#888" FontSize="10"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Interpolation Dropdown -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Interp:" Foreground="#666" FontSize="10"
                               VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <ComboBox x:Name="InterpolationCombo" Style="{StaticResource InterpolationCombo}"
                              Width="80" SelectionChanged="InterpolationCombo_SelectionChanged"
                              AutomationProperties.Name="Interpolation"
                              AutomationProperties.HelpText="Select the interpolation method between keyframes">
                        <ComboBoxItem Content="Hold"/>
                        <ComboBoxItem Content="Linear" IsSelected="True"/>
                        <ComboBoxItem Content="Ease In"/>
                        <ComboBoxItem Content="Ease Out"/>
                        <ComboBoxItem Content="Ease In/Out"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
