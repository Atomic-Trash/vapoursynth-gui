<UserControl x:Class="VapourSynthPortable.Views.PreviewView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:VapourSynthPortable.ViewModels"
             xmlns:views="clr-namespace:VapourSynthPortable.Views"
             Focusable="True"
             KeyDown="UserControl_KeyDown">

    <UserControl.DataContext>
        <vm:PreviewViewModel />
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Button style for toolbar -->
        <Style x:Key="ToolbarButton" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505054"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Navigation button style -->
        <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <views:WipeClipConverter x:Key="WipeClipConverter"/>
        <views:WipeMarginConverter x:Key="WipeMarginConverter"/>
    </UserControl.Resources>

    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="8">
            <StackPanel Orientation="Horizontal">
                <Button Content="Refresh" Style="{StaticResource ToolbarButton}"
                        Command="{Binding RefreshCommand}"
                        ToolTip="Reload video (F5)"/>
                <Rectangle Width="1" Fill="#3E3E42" Margin="8,2"/>
                <Button Content="-" Style="{StaticResource ToolbarButton}"
                        Command="{Binding ZoomOutCommand}"
                        ToolTip="Zoom out (-)"/>
                <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:P0}}"
                           Foreground="#999" VerticalAlignment="Center"
                           Width="50" TextAlignment="Center"/>
                <Button Content="+" Style="{StaticResource ToolbarButton}"
                        Command="{Binding ZoomInCommand}"
                        ToolTip="Zoom in (+)"/>
                <Rectangle Width="1" Fill="#3E3E42" Margin="8,2"/>
                <Button Content="Fit"
                        Command="{Binding ToggleFitToWindowCommand}"
                        ToolTip="Fit to window (0)">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding FitToWindow}" Value="True">
                                    <Setter Property="Background" Value="#007ACC"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button Content="100%" Style="{StaticResource ToolbarButton}"
                        Command="{Binding ResetZoomCommand}"
                        ToolTip="Actual size (1)"/>

                <Rectangle Width="1" Fill="#3E3E42" Margin="8,2"/>

                <!-- A/B Comparison Controls -->
                <Button Content="A/B"
                        Command="{Binding ToggleComparisonCommand}"
                        IsEnabled="{Binding IsComparisonEnabled}"
                        ToolTip="Toggle A/B comparison (C)">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowComparison}" Value="True">
                                    <Setter Property="Background" Value="#007ACC"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <ComboBox x:Name="ComparisonModeCombo" Width="90"
                          SelectedIndex="0"
                          IsEnabled="{Binding ShowComparison}"
                          SelectionChanged="ComparisonModeCombo_SelectionChanged"
                          ToolTip="Comparison display mode"
                          Margin="4,0,0,0">
                    <ComboBoxItem Content="Side by Side"/>
                    <ComboBoxItem Content="Wipe"/>
                    <ComboBoxItem Content="Toggle"/>
                </ComboBox>

                <Rectangle Width="1" Fill="#3E3E42" Margin="8,2"/>

                <!-- Metadata Overlay Toggle -->
                <Button Content="Info"
                        Command="{Binding ToggleMetadataOverlayCommand}"
                        ToolTip="Show video metadata overlay (I)">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ToolbarButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowMetadataOverlay}" Value="True">
                                    <Setter Property="Background" Value="#007ACC"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Frame Display -->
        <Border Grid.Row="1" Background="#0D0D0D" Margin="8">
            <Grid>
                <!-- Loading indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Loading..." Foreground="#007ACC" FontSize="16"
                               HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True" Width="100" Height="4" Margin="0,10,0,0"
                                 Background="#252526" Foreground="#007ACC"/>
                </StackPanel>

                <!-- Error display -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                            Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Error" Foreground="#E74C3C" FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ErrorMessage}" Foreground="#999"
                               TextWrapping="Wrap" MaxWidth="300"
                               HorizontalAlignment="Center" Margin="0,8,0,0"/>
                    <Button Content="Retry" Style="{StaticResource ToolbarButton}"
                            Command="{Binding RefreshCommand}"
                            HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>

                <!-- No video placeholder -->
                <TextBlock Text="No video loaded"
                           Foreground="#555" FontSize="14"
                           VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasVideo}" Value="False"/>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                        <Condition Binding="{Binding HasError}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Frame image - Normal View -->
                <ScrollViewer x:Name="FrameScrollViewer"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Visibility>
                        <Binding Path="HasVideo" Converter="{StaticResource BoolToVis}"/>
                    </ScrollViewer.Visibility>
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowComparison}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <Viewbox x:Name="FrameViewbox"
                             Stretch="Uniform"
                             StretchDirection="Both">
                        <Image x:Name="FrameImage"
                               Source="{Binding CurrentFrame}"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               RenderOptions.EdgeMode="Aliased"/>
                    </Viewbox>
                </ScrollViewer>

                <!-- Comparison View - Side by Side -->
                <Grid x:Name="ComparisonGrid"
                      Visibility="{Binding ShowComparison, Converter={StaticResource BoolToVis}}">
                    <!-- Side by Side Mode -->
                    <Grid x:Name="SideBySideView">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ComparisonMode}" Value="SideBySide">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Frame A (Original) -->
                        <Grid Grid.Column="0">
                            <Image Source="{Binding CurrentFrame}"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            <Border Background="#80000000" VerticalAlignment="Top" HorizontalAlignment="Left"
                                    Padding="8,4" Margin="8">
                                <TextBlock Text="A (Original)" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>

                        <!-- Divider -->
                        <Rectangle Grid.Column="1" Fill="#3E3E42"/>

                        <!-- Frame B (Processed) -->
                        <Grid Grid.Column="2">
                            <Image Source="{Binding ComparisonFrame}"
                                   Stretch="Uniform"
                                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            <Border Background="#80000000" VerticalAlignment="Top" HorizontalAlignment="Right"
                                    Padding="8,4" Margin="8">
                                <TextBlock Text="B (Processed)" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Wipe Mode -->
                    <Grid x:Name="WipeView">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ComparisonMode}" Value="Wipe">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <!-- Frame B (background) -->
                        <Image Source="{Binding ComparisonFrame}"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"/>

                        <!-- Frame A (clipped) -->
                        <Image Source="{Binding CurrentFrame}"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor">
                            <Image.Clip>
                                <RectangleGeometry x:Name="WipeClip">
                                    <RectangleGeometry.Rect>
                                        <MultiBinding Converter="{StaticResource WipeClipConverter}">
                                            <Binding Path="WipePosition"/>
                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                        </MultiBinding>
                                    </RectangleGeometry.Rect>
                                </RectangleGeometry>
                            </Image.Clip>
                        </Image>

                        <!-- Wipe divider line -->
                        <Rectangle Width="2" Fill="#007ACC" HorizontalAlignment="Left">
                            <Rectangle.Margin>
                                <MultiBinding Converter="{StaticResource WipeMarginConverter}">
                                    <Binding Path="WipePosition"/>
                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Grid}"/>
                                </MultiBinding>
                            </Rectangle.Margin>
                        </Rectangle>

                        <!-- Wipe slider (invisible, for interaction) -->
                        <Slider Minimum="0" Maximum="1" Value="{Binding WipePosition, Mode=TwoWay}"
                                Opacity="0" Cursor="SizeWE"/>

                        <!-- Labels -->
                        <Border Background="#80000000" VerticalAlignment="Top" HorizontalAlignment="Left"
                                Padding="8,4" Margin="8">
                            <TextBlock Text="A" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                        <Border Background="#80000000" VerticalAlignment="Top" HorizontalAlignment="Right"
                                Padding="8,4" Margin="8">
                            <TextBlock Text="B" Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                    </Grid>

                    <!-- Toggle Mode -->
                    <Grid x:Name="ToggleView">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ComparisonMode}" Value="Toggle">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <!-- Show current or comparison based on ShowComparison toggle state -->
                        <Image x:Name="ToggleImageA" Source="{Binding CurrentFrame}"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               MouseDown="ToggleImage_MouseDown"
                               MouseUp="ToggleImage_MouseUp"/>
                        <Image x:Name="ToggleImageB" Source="{Binding ComparisonFrame}"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Visibility="Collapsed"
                               MouseDown="ToggleImage_MouseDown"
                               MouseUp="ToggleImage_MouseUp"/>

                        <Border Background="#80000000" VerticalAlignment="Top" HorizontalAlignment="Center"
                                Padding="12,6" Margin="8">
                            <TextBlock x:Name="ToggleLabel" Text="A (hold to see B)" Foreground="White" FontSize="12"/>
                        </Border>
                    </Grid>
                </Grid>

                <!-- Metadata Overlay -->
                <Border x:Name="MetadataOverlay"
                        Visibility="{Binding ShowMetadataOverlay, Converter={StaticResource BoolToVis}}"
                        Background="#CC1E1E1E"
                        CornerRadius="6"
                        Padding="12,10"
                        Margin="12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        MaxWidth="280">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                                   Text="Video Information"
                                   Foreground="#007ACC" FontWeight="SemiBold" FontSize="13"
                                   Margin="0,0,0,8"/>

                        <!-- Resolution -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Resolution" Foreground="#888" FontSize="11"/>
                        <TextBlock Grid.Row="1" Grid.Column="2"
                                   Text="{Binding ResolutionText}" Foreground="#DDD" FontSize="11"
                                   FontFamily="Consolas"/>

                        <!-- Aspect Ratio -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Aspect" Foreground="#888" FontSize="11"/>
                        <TextBlock Grid.Row="2" Grid.Column="2"
                                   Text="{Binding AspectRatioText}" Foreground="#DDD" FontSize="11"
                                   FontFamily="Consolas"/>

                        <!-- Frame Rate -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Frame Rate" Foreground="#888" FontSize="11"/>
                        <TextBlock Grid.Row="3" Grid.Column="2"
                                   Text="{Binding FrameRateText}" Foreground="#DDD" FontSize="11"
                                   FontFamily="Consolas"/>

                        <!-- Format -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Format" Foreground="#888" FontSize="11"/>
                        <TextBlock Grid.Row="4" Grid.Column="2"
                                   Text="{Binding FormatText}" Foreground="#DDD" FontSize="11"
                                   FontFamily="Consolas"/>

                        <!-- Bit Depth -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Text="Bit Depth" Foreground="#888" FontSize="11"/>
                        <TextBlock Grid.Row="5" Grid.Column="2"
                                   Text="{Binding BitDepthText}" Foreground="#DDD" FontSize="11"
                                   FontFamily="Consolas"/>

                        <!-- Color Space -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   Text="Color Space" Foreground="#888" FontSize="11"/>
                        <TextBlock Grid.Row="6" Grid.Column="2"
                                   Text="{Binding ColorSpaceText}" Foreground="#DDD" FontSize="11"
                                   FontFamily="Consolas"/>

                        <!-- Duration -->
                        <TextBlock Grid.Row="7" Grid.Column="0"
                                   Text="Duration" Foreground="#888" FontSize="11"/>
                        <TextBlock Grid.Row="7" Grid.Column="2"
                                   Text="{Binding DurationText}" Foreground="#DDD" FontSize="11"
                                   FontFamily="Consolas"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Navigation Controls -->
        <Border Grid.Row="2" Background="#252526" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- First/Previous buttons -->
                <Button Grid.Column="0" Content="⏮" Style="{StaticResource NavButton}"
                        Command="{Binding FirstFrameCommand}"
                        ToolTip="First frame (Home)"
                        IsEnabled="{Binding CanNavigate}"/>
                <Button Grid.Column="1" Content="◀" Style="{StaticResource NavButton}"
                        Command="{Binding PreviousFrameCommand}"
                        ToolTip="Previous frame (Left)"
                        IsEnabled="{Binding CanNavigate}"/>

                <!-- Frame Slider -->
                <Slider Grid.Column="2"
                        Minimum="0"
                        Maximum="{Binding TotalFrames}"
                        Value="{Binding CurrentFrameNumber, Mode=TwoWay}"
                        IsEnabled="{Binding HasVideo}"
                        Margin="10,0"
                        VerticalAlignment="Center"
                        Style="{x:Null}">
                    <Slider.Resources>
                        <Style TargetType="Slider">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Slider">
                                        <Grid>
                                            <Border Height="4" Background="#3E3E42" CornerRadius="2"
                                                    VerticalAlignment="Center"/>
                                            <Track x:Name="PART_Track">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Style>
                                                            <Style TargetType="Thumb">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Thumb">
                                                                            <Ellipse Width="16" Height="16"
                                                                                     Fill="#007ACC"
                                                                                     Stroke="#005A9E"
                                                                                     StrokeThickness="1"/>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </Style>
                                                        </Thumb.Style>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Slider.Resources>
                </Slider>

                <!-- Next/Last buttons -->
                <Button Grid.Column="3" Content="▶" Style="{StaticResource NavButton}"
                        Command="{Binding NextFrameCommand}"
                        ToolTip="Next frame (Right)"
                        IsEnabled="{Binding CanNavigate}"/>
                <Button Grid.Column="4" Content="⏭" Style="{StaticResource NavButton}"
                        Command="{Binding LastFrameCommand}"
                        ToolTip="Last frame (End)"
                        IsEnabled="{Binding CanNavigate}"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding FrameInfoText}"
                           Foreground="White" FontSize="12"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding ResolutionText}"
                           Foreground="White" FontSize="12"
                           Margin="20,0,0,0"/>

                <TextBlock Grid.Column="2"
                           Text="{Binding FormatText}"
                           Foreground="White" FontSize="12"
                           Margin="20,0,0,0"/>

                <TextBlock Grid.Column="3"
                           Text="{Binding StatusMessage}"
                           Foreground="#FFFFFF99" FontSize="12"
                           Margin="20,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
