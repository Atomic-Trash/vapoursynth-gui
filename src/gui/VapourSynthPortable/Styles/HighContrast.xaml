<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
    High Contrast Theme Support for VapourSynth Studio

    This resource dictionary provides high contrast colors that automatically
    adapt when Windows High Contrast mode is enabled.

    Usage: Colors defined here use SystemColors which automatically switch
    based on the user's accessibility settings.
    -->

    <!-- High Contrast Aware Colors -->
    <SolidColorBrush x:Key="HighContrastWindowBackground" Color="{DynamicResource {x:Static SystemColors.WindowColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastWindowText" Color="{DynamicResource {x:Static SystemColors.WindowTextColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastHighlight" Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastHighlightText" Color="{DynamicResource {x:Static SystemColors.HighlightTextColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastControlText" Color="{DynamicResource {x:Static SystemColors.ControlTextColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastControlBackground" Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastButtonFace" Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastButtonText" Color="{DynamicResource {x:Static SystemColors.ControlTextColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastBorder" Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastDisabledText" Color="{DynamicResource {x:Static SystemColors.GrayTextColorKey}}"/>
    <SolidColorBrush x:Key="HighContrastHotTrack" Color="{DynamicResource {x:Static SystemColors.HotTrackColorKey}}"/>

    <!-- High Contrast Button Style -->
    <Style x:Key="HighContrastButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource HighContrastButtonFace}"/>
        <Setter Property="Foreground" Value="{DynamicResource HighContrastButtonText}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource HighContrastBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FocusVisualStyle">
            <Setter.Value>
                <Style>
                    <Setter Property="Control.Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <Rectangle Margin="-3" StrokeThickness="2"
                                           Stroke="{DynamicResource HighContrastHighlight}"
                                           StrokeDashArray="1 2"/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource HighContrastHighlight}"/>
                <Setter Property="Foreground" Value="{DynamicResource HighContrastHighlightText}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{DynamicResource HighContrastHighlight}"/>
                <Setter Property="Foreground" Value="{DynamicResource HighContrastHighlightText}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource HighContrastDisabledText}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- High Contrast TextBox Style -->
    <Style x:Key="HighContrastTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{DynamicResource HighContrastWindowBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource HighContrastWindowText}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource HighContrastBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CaretBrush" Value="{DynamicResource HighContrastWindowText}"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource HighContrastHighlight}"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{DynamicResource HighContrastHighlight}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- High Contrast ListBox Style -->
    <Style x:Key="HighContrastListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{DynamicResource HighContrastWindowBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource HighContrastWindowText}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource HighContrastBorder}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- High Contrast ListBoxItem Style -->
    <Style x:Key="HighContrastListBoxItem" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource HighContrastWindowText}"/>
        <Setter Property="Padding" Value="4,2"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource HighContrastHighlight}"/>
                <Setter Property="Foreground" Value="{DynamicResource HighContrastHighlightText}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource HighContrastHotTrack}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Focus Visual Style with High Visibility -->
    <Style x:Key="HighContrastFocusVisual">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="-2" StrokeThickness="3"
                               Stroke="{DynamicResource HighContrastHighlight}"
                               StrokeDashArray="1 1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
