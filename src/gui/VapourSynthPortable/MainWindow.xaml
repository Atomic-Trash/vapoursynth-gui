<Window x:Class="VapourSynthPortable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pages="clr-namespace:VapourSynthPortable.Pages"
        Title="VapourSynth Studio"
        Height="800" Width="1400"
        MinHeight="700" MinWidth="1100"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Page Navigation Button Style -->
        <Style x:Key="NavButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#CCC"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#FFF"/>
                                <Setter TargetName="border" Property="Background" Value="#3C3C3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Border Grid.Row="0" Background="#2D2D2D">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title & File Menu -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0">
                    <TextBlock Text="VS" FontSize="18" FontWeight="Bold" Foreground="#0078D4"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Studio" FontSize="18" FontWeight="Light" Foreground="#FFF"
                               VerticalAlignment="Center" Margin="2,0,20,0"/>

                    <!-- File Menu -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Header="_File" Foreground="#AAA" FontSize="12">
                            <MenuItem Header="_New Project" Click="NewProject_Click" InputGestureText="Ctrl+N">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" Foreground="#AAA"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Open Project..." Click="OpenProject_Click" InputGestureText="Ctrl+O">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" Foreground="#AAA"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="_Save" Click="SaveProject_Click" InputGestureText="Ctrl+S">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" Foreground="#AAA"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Save _As..." Click="SaveProjectAs_Click" InputGestureText="Ctrl+Shift+S"/>
                            <Separator/>
                            <MenuItem Header="_Recent Projects" x:Name="RecentProjectsMenu" IsEnabled="False"/>
                            <Separator/>
                            <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4"/>
                        </MenuItem>
                    </Menu>
                </StackPanel>

                <!-- Page Navigation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton x:Name="NavMedia" Content="Media" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"/>
                    <RadioButton x:Name="NavEdit" Content="Edit" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"/>
                    <RadioButton x:Name="NavRestore" Content="Restore" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" IsChecked="True" Checked="NavButton_Checked"/>
                    <RadioButton x:Name="NavColor" Content="Color" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"/>
                    <RadioButton x:Name="NavExport" Content="Export" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"/>
                </StackPanel>

                <!-- Right Side Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,8">
                    <Button Content="Settings" Style="{StaticResource SecondaryButton}" Padding="12,6"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Page Content Area -->
        <Grid Grid.Row="1">
            <pages:MediaPage x:Name="PageMedia" Visibility="Collapsed"/>
            <pages:EditPage x:Name="PageEdit" Visibility="Collapsed"/>
            <pages:RestorePage x:Name="PageRestore" Visibility="Visible"/>
            <pages:ColorPage x:Name="PageColor" Visibility="Collapsed"/>
            <pages:ExportPage x:Name="PageExport" Visibility="Collapsed"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#252526" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Ready" Foreground="#888" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="VapourSynth R68" Foreground="#666" Margin="0,0,15,0"/>
                    <TextBlock Text="Python 3.12" Foreground="#666" Margin="0,0,15,0"/>
                    <TextBlock Text="FFmpeg Ready" Foreground="#4EC9B0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
