<Window x:Class="VapourSynthPortable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pages="clr-namespace:VapourSynthPortable.Pages"
        xmlns:controls="clr-namespace:VapourSynthPortable.Controls"
        Title="{Binding WindowTitle}"
        Height="800" Width="1400"
        MinHeight="700" MinWidth="1100"
        Background="{StaticResource ContentBackground}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Page Navigation Button Style with Step Number (uses design tokens) -->
        <Style x:Key="NavButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeBodyLarge}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border" Background="Transparent"
                                CornerRadius="{StaticResource RadiusS}"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="stepBadge" Width="20" Height="20" CornerRadius="10"
                                        Background="{StaticResource PanelBackground}" Margin="0,0,8,0">
                                    <TextBlock x:Name="stepNumber" Text="{TemplateBinding Tag}"
                                               FontSize="11" FontWeight="Bold"
                                               Foreground="{StaticResource TextSecondary}"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource PanelBackground}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SelectionBrush}"/>
                                <Setter TargetName="stepBadge" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="stepNumber" Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Window.InputBindings>
        <!-- Navigation keyboard shortcuts -->
        <KeyBinding Key="Left" Modifiers="Alt" Command="{Binding GoBackCommand}"/>
        <KeyBinding Key="Right" Modifiers="Alt" Command="{Binding GoForwardCommand}"/>
        <KeyBinding Key="BrowserBack" Command="{Binding GoBackCommand}"/>
        <KeyBinding Key="BrowserForward" Command="{Binding GoForwardCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition x:Name="LogPanelRow" Height="180"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <Border Grid.Row="0" Background="{StaticResource ElevatedBackground}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title & File Menu -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0">
                    <TextBlock Text="VS" FontSize="18" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Studio" FontSize="18" FontWeight="Light" Foreground="{StaticResource TextPrimary}"
                               VerticalAlignment="Center" Margin="2,0,20,0"/>

                    <!-- File Menu -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Header="_File" Foreground="{StaticResource TextSecondary}" FontSize="12">
                            <MenuItem Header="_New Project" Click="NewProject_Click" InputGestureText="Ctrl+N">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE7C3;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource TextSecondary}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="_Open Project..." Click="OpenProject_Click" InputGestureText="Ctrl+O">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource TextSecondary}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator/>
                            <MenuItem Header="_Save" Click="SaveProject_Click" InputGestureText="Ctrl+S">
                                <MenuItem.Icon>
                                    <TextBlock Text="&#xE74E;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource TextSecondary}"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Save _As..." Click="SaveProjectAs_Click" InputGestureText="Ctrl+Shift+S"/>
                            <Separator/>
                            <MenuItem Header="_Recent Projects" x:Name="RecentProjectsMenu" IsEnabled="False"/>
                            <Separator/>
                            <MenuItem Header="E_xit" Click="Exit_Click" InputGestureText="Alt+F4"/>
                        </MenuItem>
                    </Menu>

                    <!-- Navigation History Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                        <Button Command="{Binding GoBackCommand}"
                                ToolTip="Go Back (Alt+Left)"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="8,4"
                                Cursor="Hand"
                                AutomationProperties.AutomationId="GoBackButton">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.3"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="&#xE72B;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                        </Button>
                        <Button Command="{Binding GoForwardCommand}"
                                ToolTip="Go Forward (Alt+Right)"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="8,4"
                                Cursor="Hand"
                                AutomationProperties.AutomationId="GoForwardButton">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.3"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="&#xE72A;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <!-- Page Navigation -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center"
                            AutomationProperties.AutomationId="NavigationPanel">
                    <RadioButton x:Name="NavMedia" Content="Import" Tag="1" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" IsChecked="True" Checked="NavButton_Checked"
                                 AutomationProperties.AutomationId="MediaNavButton"
                                 ToolTip="Step 1: Import and manage media files"/>
                    <RadioButton x:Name="NavEdit" Content="Edit" Tag="2" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"
                                 AutomationProperties.AutomationId="EditNavButton"
                                 ToolTip="Step 2: Timeline editing and clip arrangement"/>
                    <RadioButton x:Name="NavRestore" Content="Restore" Tag="3" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"
                                 AutomationProperties.AutomationId="RestoreNavButton"
                                 ToolTip="Step 3: AI-powered video restoration and enhancement"/>
                    <RadioButton x:Name="NavColor" Content="Color" Tag="4" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"
                                 AutomationProperties.AutomationId="ColorNavButton"
                                 ToolTip="Step 4: Color grading and correction tools"/>
                    <RadioButton x:Name="NavExport" Content="Export" Tag="5" Style="{StaticResource NavButton}"
                                 GroupName="PageNav" Checked="NavButton_Checked"
                                 AutomationProperties.AutomationId="ExportNavButton"
                                 ToolTip="Step 5: Render and export final video"/>
                </StackPanel>

                <!-- Right Side Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="15,8">
                    <Button x:Name="SettingsButton" Click="SettingsButton_Click"
                            ToolTip="Settings (Ctrl+,)"
                            Background="Transparent" BorderThickness="0"
                            Padding="10,8" Cursor="Hand"
                            AutomationProperties.AutomationId="SettingsButton">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Page Content Area -->
        <Grid Grid.Row="1">
            <pages:MediaPage x:Name="PageMedia" Visibility="Visible"/>
            <pages:EditPage x:Name="PageEdit" Visibility="Collapsed"/>
            <pages:RestorePage x:Name="PageRestore" Visibility="Collapsed"/>
            <pages:ColorPage x:Name="PageColor" Visibility="Collapsed"/>
            <pages:ExportPage x:Name="PageExport" Visibility="Collapsed"/>

            <!-- Toast Notification Overlay -->
            <controls:ToastNotification x:Name="ToastNotification"
                                        VerticalAlignment="Top" HorizontalAlignment="Center"
                                        Margin="0,20,0,0"/>
        </Grid>

        <!-- Log Panel Splitter -->
        <GridSplitter Grid.Row="2" Height="4" HorizontalAlignment="Stretch"
                      Background="{StaticResource BorderBrush}" Cursor="SizeNS"/>

        <!-- Log Viewer Panel -->
        <controls:LogViewerControl x:Name="LogViewer" Grid.Row="3"/>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="{StaticResource SurfaceBackground}" Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage, FallbackValue='Ready'}"
                           Foreground="{StaticResource TextSecondary}" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ToggleButton x:Name="LogPanelToggle" Content="Output"
                                  IsChecked="True" Click="LogPanelToggle_Click"
                                  Padding="8,2" Margin="0,0,15,0"
                                  Background="{StaticResource ElevatedBackground}"
                                  Foreground="{StaticResource TextSecondary}"
                                  BorderBrush="{StaticResource BorderBrush}"
                                  ToolTip="Toggle output log panel visibility"/>
                    <TextBlock Text="{Binding VapourSynthVersion, FallbackValue='VapourSynth R70'}"
                               Foreground="{StaticResource TextSecondary}" Margin="0,0,15,0"
                               VerticalAlignment="Center" ToolTip="VapourSynth video processing framework version"/>
                    <TextBlock Text="{Binding PythonVersion, FallbackValue='Python 3.12'}"
                               Foreground="{StaticResource TextSecondary}" Margin="0,0,15,0"
                               VerticalAlignment="Center" ToolTip="Embedded Python interpreter version"/>
                    <TextBlock Text="{Binding FFmpegStatus, FallbackValue='FFmpeg Ready'}"
                               Foreground="{StaticResource SuccessBrush}"
                               VerticalAlignment="Center" ToolTip="FFmpeg video encoding backend status"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
